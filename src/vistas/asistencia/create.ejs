<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar Asistencia - CARSIL Equipos y Servicios SAC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { 
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #e9ecef 100%);
        }
        .sidebar, .main-content { transition: all 0.3s; }
        .toggle-sidebar-btn {
            position: absolute;
            top: 1.2rem;
            left: 290px;
            z-index: 1100;
            background: linear-gradient(135deg, #0056b3, #003366);
            color: #fff;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 12px rgba(0,86,179,0.3);
            cursor: pointer;
            transition: all 0.3s;
        }
        .toggle-sidebar-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0,86,179,0.4);
        }
        .sidebar.hide { transform: translateX(-100%); }
        .main-content.full { margin-left: 0 !important; }
        @media (max-width: 768px) {
            .toggle-sidebar-btn { left: 10px; top: 10px; }
        }
        .sidebar {
            width: 270px;
            min-height: 100vh;
            background: linear-gradient(180deg, #003366 0%, #001a33 100%);
            color: #fff;
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 1rem;
            z-index: 1000;
            box-shadow: 4px 0 20px rgba(0,0,0,0.1);
        }
        .sidebar .sidebar-heading {
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: 2px;
            color: #fff;
        }
        .sidebar .company-slogan {
            font-size: 0.9rem;
            color: #b0c4de;
            font-weight: 300;
        }
        .sidebar .menu-item {
            color: rgba(255,255,255,0.9);
            padding: 0.8rem 1.2rem;
            border-radius: 0.7rem;
            margin: 0.2rem 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.8rem;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s;
            position: relative;
        }
        .sidebar .menu-item:hover {
            background: rgba(0,86,179,0.3);
            color: #fff;
            transform: translateX(5px);
        }
        .sidebar .menu-item.active {
            background: linear-gradient(135deg, #0056b3, #0d6efd);
            color: #fff;
            box-shadow: 0 2px 8px rgba(0,86,179,0.3);
        }
        .sidebar .logout-item {
            color: #ff6b6b;
        }
        .sidebar .logout-item:hover {
            background: rgba(255,107,107,0.1);
            color: #ff6b6b;
        }
        .sidebar .company-slogan {
            font-size: 1rem;
            color: #b0c4de;
        }
        .sidebar .menu-item {
            color: #fff;
            padding: 0.75rem 1.2rem;
            border-radius: 0.5rem;
            margin-bottom: 0.2rem;
            display: flex;
            align-items: center;
            gap: 0.7rem;
            text-decoration: none;
            font-weight: 500;
            transition: background 0.2s;
        }
        .sidebar .menu-item.active, .sidebar .menu-item:hover {
            background: #0056b3;
            color: #fff;
        }
        .sidebar .logout-item {
            color: #ff4d4f;
        }
        .main-content {
            margin-left: 270px;
            min-height: 100vh;
            background: #f8fafc;
        }
        .user-profile {
            display: flex;
            align-items: center;
            gap: 0.7rem;
        }
        .user-avatar {
            background: #003366;
            color: #fff;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 1.2rem;
        }
        .card-header {
            background-color: #fff;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
         <nav class="sidebar" id="sidebar">
            <div class="sidebar-heading text-center py-4">
                <div class="company-name">CARSIL</div>
                <div class="company-slogan">Equipos y Servicios SAC</div>
            </div>
            <div class="d-flex flex-column h-100 px-2 py-3">
                <a href="/menu/principal" class="menu-item">
                    <i class="bi bi-house"></i>
                    Inicio
                </a>
                <a href="/proformas" class="menu-item">
                    <i class="bi bi-file-earmark-text"></i>
                    Proformas
                </a>
                <a href="/facturas" class="menu-item">
                    <i class="bi bi-receipt"></i>
                    Facturas
                
                <a href="/clientes" class="menu-item">
                    <i class="bi bi-people"></i>
                    Clientes
                </a>
                <a href="/productos" class="menu-item">
                    <i class="bi bi-box"></i>
                    Productos
                </a>
                <a href="/empleados" class="menu-item">
                    <i class="bi bi-person-badge"></i>
                    Empleados
                </a>
                <a href="/pagos" class="menu-item">
                    <i class="bi bi-cash-coin"></i>
                    Pagos
                </a>
                <a href="/reportes" class="menu-item">
                    <i class="bi bi-bar-chart"></i>
                    Reportes
                </a>
                <a href="/usuarios" class="menu-item">
                    <i class="bi bi-person-circle"></i>
                    Usuarios
                </a>
                
                <a href="/asistencia" class="menu-item">
                    <i class="bi bi-calendar-check"></i>
                    Asistencias
                </a>
                <a href="/empresa" class="menu-item">
                    <i class="bi bi-gear"></i>
                    Empresa
                </a>
                <div class="mt-auto">
                    <a href="/login" class="menu-item logout-item">
                        <i class="bi bi-box-arrow-right"></i>
                        Cerrar Sesión
                    </a>
                </div>
            </div>
        </nav>
        <!-- Botón para ocultar/mostrar barra -->
        <button class="toggle-sidebar-btn" id="toggleSidebarBtn" title="Ocultar/Mostrar menú">
            <i class="bi bi-chevron-left" id="toggleIcon"></i>
        </button>
        <!-- Main Content -->
        <div class="main-content" id="main-content">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <span class="navbar-brand ms-3">Registro de Asistencias</span>
                    <div class="user-profile ms-auto">
                        <span><%= user && user.Nombres ? user.Nombres : 'Administrador' %></span>
                        <div class="user-avatar"><%= user && user.Nombres ? user.Nombres.charAt(0) : 'A' %></div>
                    </div>
                </div>
            </nav>
            <div class="container-fluid py-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="card-title mb-0">Registrar Nueva Asistencia</h5>
                    </div>
                    <div class="card-body">
                        <!-- Mensaje de error eliminado según solicitud del usuario -->
                        
                        <form action="/asistencia" method="POST">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="IdEmpleado" class="form-label">Empleado</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                        <select class="form-select" id="IdEmpleado" name="IdEmpleado" required>
                                            <option value="">Seleccione un empleado</option>
                                            <% if (typeof empleados !== 'undefined' && empleados) { %>
                                                <% empleados.forEach(empleado => { %>
                                                    <option value="<%= empleado.IdEmpleado %>">
                                                        <%= empleado.Apellidos %>, <%= empleado.Nombres %> - <%= empleado.Cargo %>
                                                    </option>
                                                <% }); %>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="Fecha" class="form-label">Fecha</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                                        <input type="date" class="form-control" id="Fecha" name="Fecha" 
                                               value="<%= new Date().toISOString().split('T')[0] %>" required>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Jornada Laboral -->
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <label for="JornadaLaboral" class="form-label">Jornada Laboral</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-clock-fill"></i></span>
                                        <select class="form-select" id="JornadaLaboral" name="JornadaLaboral" required>
                                            <option value="">Seleccione la jornada laboral</option>
                                            <option value="COMPLETA" data-entrada="08:00" data-salida="17:00" data-tolerancia="08:30">Tiempo Completo (8:00 AM - 5:00 PM)</option>
                                            <option value="MEDIO_MANANA" data-entrada="08:00" data-salida="12:00" data-tolerancia="08:30">Medio Tiempo Mañana (8:00 AM - 12:00 PM)</option>
                                            <option value="MEDIO_TARDE" data-entrada="13:00" data-salida="17:50" data-tolerancia="13:30">Medio Tiempo Tarde (1:00 PM - 5:50 PM)</option>
                                            <option value="NOCTURNO" data-entrada="22:00" data-salida="06:00" data-tolerancia="22:30">Turno Nocturno (10:00 PM - 6:00 AM)</option>
                                            <option value="PERSONALIZADO" data-entrada="" data-salida="" data-tolerancia="">Personalizado</option>
                                        </select>
                                    </div>
                                    <div class="form-text">Seleccione el tipo de jornada para autocompletar horarios</div>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <label for="HoraEntrada" class="form-label">Hora de Entrada</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-clock"></i></span>
                                        <input type="time" class="form-control" id="HoraEntrada" name="HoraEntrada">
                                    </div>
                                    <div class="form-text">Se autocompleta según la jornada seleccionada</div>
                                </div>
                                <div class="col-md-4">
                                    <label for="HoraSalida" class="form-label">Hora de Salida</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-clock-history"></i></span>
                                        <input type="time" class="form-control" id="HoraSalida" name="HoraSalida">
                                    </div>
                                    <div class="form-text">Se autocompleta según la jornada seleccionada</div>
                                </div>
                                <div class="col-md-4">
                                    <label for="TipoAsistencia" class="form-label">Tipo de Asistencia</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                        <select class="form-select" id="TipoAsistencia" name="TipoAsistencia" required>
                                            <option value="REGULAR">Regular</option>
                                            <option value="FERIADO">Feriado</option>
                                            <option value="EXTRA">Extra</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <label class="form-label">Estado de Asistencia</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-flag"></i></span>
                                        <div class="d-flex gap-4 align-items-center ms-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="Estado" 
                                                       id="EstadoPresente" value="PRESENTE" checked>
                                                <label class="form-check-label text-success fw-semibold" for="EstadoPresente">
                                                    <i class="bi bi-check-circle me-1"></i>Presente
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="Estado" 
                                                       id="EstadoTardanza" value="TARDANZA">
                                                <label class="form-check-label text-warning fw-semibold" for="EstadoTardanza">
                                                    <i class="bi bi-clock me-1"></i>Tardanza
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="Estado" 
                                                       id="EstadoAusente" value="AUSENTE">
                                                <label class="form-check-label text-danger fw-semibold" for="EstadoAusente">
                                                    <i class="bi bi-x-circle me-1"></i>Ausente
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-text mt-2">
                                        <small id="estadoInfo">
                                            <strong>Presente:</strong> Llegó a tiempo según su jornada |
                                            <strong>Tardanza:</strong> Llegó tarde según su jornada |
                                            <strong>Ausente:</strong> No asistió
                                        </small>
                                        <div id="jornadaInfo" class="mt-1 text-primary d-none">
                                            <i class="bi bi-info-circle me-1"></i>
                                            <span id="jornadaDetalles"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Información de horas calculadas -->
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <div class="alert alert-info d-none" id="horasCalculadasInfo">
                                        <h6><i class="bi bi-calculator me-2"></i>Horas Trabajadas Calculadas</h6>
                                        <div class="d-flex align-items-center gap-3">
                                            <span>Total: <strong id="horasCalculadas">0.00</strong> horas</span>
                                            <small class="text-muted">Se calcula automáticamente al registrar entrada y salida</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="Observaciones" class="form-label">Observaciones</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-chat-left-text"></i></span>
                                    <textarea class="form-control" id="Observaciones" name="Observaciones" 
                                              rows="3" placeholder="Ingrese observaciones adicionales..."></textarea>
                                </div>
                                <div class="form-text">
                                    <span id="observacionesRequeridas" class="text-danger d-none">
                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                        Las observaciones son obligatorias cuando el empleado está ausente
                                    </span>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-end gap-2">
                                <a href="/asistencia" class="btn btn-secondary">
                                    <i class="bi bi-x-circle me-1"></i>Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save me-1"></i>Registrar Asistencia
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggleBtn = document.getElementById('toggleSidebarBtn');
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('main-content');
        const toggleIcon = document.getElementById('toggleIcon');
        const menuItems = document.querySelectorAll('.menu-item');
        const userAvatar = document.querySelector('.user-avatar');
        
        // Usar el nombre del usuario dinámicamente desde la variable EJS
        const userName = '<%= user && user.Nombres ? user.Nombres : "Administrador" %>';
        userAvatar.textContent = userName.charAt(0);

        toggleBtn.addEventListener('click', function() {
            sidebar.classList.toggle('hide');
            mainContent.classList.toggle('full');
            // Cambia el icono de dirección
            if (sidebar.classList.contains('hide')) {
                toggleIcon.classList.remove('bi-chevron-left');
                toggleIcon.classList.add('bi-chevron-right');
            } else {
                toggleIcon.classList.remove('bi-chevron-right');
                toggleIcon.classList.add('bi-chevron-left');
            }
        });

        // Menú activo
        menuItems.forEach(item => {
            item.addEventListener('click', function() {
                menuItems.forEach(i => i.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // Manejar cambio de jornada laboral
        const jornadaSelect = document.getElementById('JornadaLaboral');
        const horaEntrada = document.getElementById('HoraEntrada');
        const horaSalida = document.getElementById('HoraSalida');
        const jornadaInfo = document.getElementById('jornadaInfo');
        const jornadaDetalles = document.getElementById('jornadaDetalles');
        const horasCalculadasInfo = document.getElementById('horasCalculadasInfo');
        const horasCalculadas = document.getElementById('horasCalculadas');

        jornadaSelect.addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            const entrada = selectedOption.getAttribute('data-entrada');
            const salida = selectedOption.getAttribute('data-salida');
            const tolerancia = selectedOption.getAttribute('data-tolerancia');

            if (entrada && salida) {
                horaEntrada.value = entrada;
                horaSalida.value = salida;
                
                // Mostrar información de la jornada
                jornadaInfo.classList.remove('d-none');
                jornadaDetalles.textContent = `Entrada: ${entrada}, Salida: ${salida}, Tolerancia hasta: ${tolerancia}`;
                
                // Calcular horas automáticamente
                calcularHoras();
            } else if (this.value === 'PERSONALIZADO') {
                horaEntrada.value = '';
                horaSalida.value = '';
                jornadaInfo.classList.add('d-none');
                horasCalculadasInfo.classList.add('d-none');
            } else {
                horaEntrada.value = '';
                horaSalida.value = '';
                jornadaInfo.classList.add('d-none');
                horasCalculadasInfo.classList.add('d-none');
            }
        });

        // Función para calcular horas trabajadas
        function calcularHoras() {
            const entrada = horaEntrada.value;
            const salida = horaSalida.value;

            if (entrada && salida) {
                const [horaE, minE] = entrada.split(':').map(Number);
                const [horaS, minS] = salida.split(':').map(Number);
                
                let totalMinutos = 0;
                
                // Manejar turnos nocturnos (cuando salida es al día siguiente)
                if (horaS < horaE) {
                    // Turno nocturno
                    totalMinutos = (24 - horaE) * 60 - minE + horaS * 60 + minS;
                } else {
                    // Turno normal
                    totalMinutos = (horaS - horaE) * 60 + (minS - minE);
                }
                
                const horas = (totalMinutos / 60).toFixed(2);
                horasCalculadas.textContent = horas;
                horasCalculadasInfo.classList.remove('d-none');
            } else {
                horasCalculadasInfo.classList.add('d-none');
            }
        }

        // Calcular horas cuando se cambien manualmente
        horaEntrada.addEventListener('change', calcularHoras);
        horaSalida.addEventListener('change', calcularHoras);

        // Validación mejorada considerando la jornada
        function validarAsistencia() {
            const jornadaSeleccionada = jornadaSelect.options[jornadaSelect.selectedIndex];
            const tolerancia = jornadaSeleccionada.getAttribute('data-tolerancia');
            const entrada = horaEntrada.value;
            
            if (tolerancia && entrada) {
                const estadoPresente = document.getElementById('EstadoPresente');
                const estadoTardanza = document.getElementById('EstadoTardanza');
                
                if (entrada <= tolerancia) {
                    estadoPresente.checked = true;
                } else {
                    estadoTardanza.checked = true;
                }
            }
        }

        // Validar estado al cambiar hora de entrada
        horaEntrada.addEventListener('change', validarAsistencia);

        // Validar que si el estado es AUSENTE, se ingrese una observación
        const form = document.querySelector('form');
        const estadoInputs = document.querySelectorAll('input[name="Estado"]');
        const observacionesInput = document.getElementById('Observaciones');
        const observacionesRequeridas = document.getElementById('observacionesRequeridas');

        // Función para mostrar/ocultar el mensaje de observaciones requeridas
        function toggleObservacionesRequeridas() {
            const estadoAusente = document.getElementById('EstadoAusente').checked;
            if (estadoAusente) {
                observacionesRequeridas.classList.remove('d-none');
                observacionesInput.setAttribute('required', 'required');
                // Limpiar horas cuando está ausente
                horaEntrada.value = '';
                horaSalida.value = '';
                horasCalculadasInfo.classList.add('d-none');
            } else {
                observacionesRequeridas.classList.add('d-none');
                observacionesInput.removeAttribute('required');
                // Restaurar horas de la jornada seleccionada
                if (jornadaSelect.value && jornadaSelect.value !== 'PERSONALIZADO') {
                    jornadaSelect.dispatchEvent(new Event('change'));
                }
            }
        }

        // Escuchar cambios en los radio buttons del estado
        estadoInputs.forEach(input => {
            input.addEventListener('change', toggleObservacionesRequeridas);
        });

        if (form) {
            form.addEventListener('submit', function(e) {
                const estadoAusente = document.getElementById('EstadoAusente').checked;
                const observaciones = observacionesInput.value.trim();
                
                if (estadoAusente && !observaciones) {
                    e.preventDefault();
                    alert('Debe ingresar una observación cuando el estado es AUSENTE');
                    observacionesInput.focus();
                    return;
                }

                // Validar que se haya seleccionado una jornada
                if (!jornadaSelect.value) {
                    e.preventDefault();
                    alert('Debe seleccionar un tipo de jornada laboral');
                    jornadaSelect.focus();
                    return;
                }
            });
        }
    });
    </script>
</body>
</html>

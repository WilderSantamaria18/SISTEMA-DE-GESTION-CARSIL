<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Asistencias - CARSIL Equipos y Servicios SAC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { 
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #e9ecef 100%);
        }
        .toggle-sidebar-btn {
            position: absolute;
            top: 1.2rem;
            left: 290px;
            z-index: 1100;
            background: linear-gradient(135deg, #0056b3, #003366);
            color: #fff;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 12px rgba(0,86,179,0.3);
            cursor: pointer;
            transition: all 0.3s;
        }
        .toggle-sidebar-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0,86,179,0.4);
        }
        .sidebar.hide { transform: translateX(-100%); }
        .main-content.full { margin-left: 0 !important; }
        @media (max-width: 768px) {
            .toggle-sidebar-btn { left: 10px; top: 10px; }
        }
        .sidebar {
            width: 270px;
            min-height: 100vh;
            background: linear-gradient(180deg, #003366 0%, #001a33 100%);
            color: #fff;
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 1rem;
            z-index: 1000;
            box-shadow: 4px 0 20px rgba(0,0,0,0.1);
        }
        .sidebar .sidebar-heading {
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: 2px;
            color: #fff;
        }
        .sidebar .company-slogan {
            font-size: 0.9rem;
            color: #b0c4de;
            font-weight: 300;
        }
        .sidebar .menu-item {
            color: rgba(255,255,255,0.9);
            padding: 0.8rem 1.2rem;
            border-radius: 0.7rem;
            margin: 0.2rem 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.8rem;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s;
            position: relative;
        }
        .sidebar .menu-item:hover {
            background: rgba(0,86,179,0.3);
            color: #fff;
            transform: translateX(5px);
        }
        .sidebar .menu-item.active {
            background: linear-gradient(135deg, #0056b3, #0d6efd);
            color: #fff;
            box-shadow: 0 2px 8px rgba(0,86,179,0.3);
        }
        .sidebar .logout-item {
            color: #ff6b6b;
        }
        .sidebar .logout-item:hover {
            background: rgba(255,107,107,0.1);
            color: #ff6b6b;
        }
        .main-content {
            margin-left: 270px;
            min-height: 100vh;
            transition: margin 0.3s;
        }
        .user-profile {
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }
        .user-avatar {
            background: linear-gradient(135deg, #0056b3, #003366);
            color: #fff;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 1.2rem;
            box-shadow: 0 2px 8px rgba(0,86,179,0.3);
        }
        .navbar-top {
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0,0,0,0.08);
            border: none;
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        .stat-card {
            background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.06);
            border: 1px solid rgba(0,86,179,0.1);
            transition: all 0.3s;
        }
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0,0,0,0.12);
        }
        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }
        .card-modern {
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(0,86,179,0.1);
            border-radius: 1rem;
            box-shadow: 0 8px 32px rgba(0,0,0,0.06);
            transition: all 0.3s;
        }
        .card-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.12);
        }
        .btn-modern {
            border-radius: 0.7rem;
            padding: 0.6rem 1.5rem;
            font-weight: 600;
            border: none;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        .btn-primary-modern {
            background: linear-gradient(135deg, #0056b3, #0d6efd);
            color: #fff;
            box-shadow: 0 4px 12px rgba(0,86,179,0.3);
        }
        .btn-primary-modern:hover {
            background: linear-gradient(135deg, #003d82, #0b5ed7);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0,86,179,0.4);
            color: #fff;
        }
        .search-container {
            background: rgba(255,255,255,0.9);
            border-radius: 1rem;
            padding: 1rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.06);
            border: 1px solid rgba(0,86,179,0.1);
            margin-bottom: 2rem;
        }
        .search-box {
            position: relative;
        }
        .search-box .form-control, .search-box .form-select {
            border-radius: 0.7rem;
            border: 1px solid rgba(0,86,179,0.2);
            padding: 0.8rem 1rem;
            background: rgba(255,255,255,0.9);
            transition: all 0.3s;
        }
        .search-box .form-control:focus, .search-box .form-select:focus {
            border-color: #0056b3;
            box-shadow: 0 0 0 0.2rem rgba(0,86,179,0.15);
        }
        .table-modern {
            background: rgba(255,255,255,0.95);
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0,0,0,0.06);
        }
        .table-modern thead th {
            background: linear-gradient(135deg, #003366, #0056b3);
            color: #fff;
            font-weight: 600;
            border: none;
            padding: 1rem;
            font-size: 0.9rem;
        }
        .table-modern tbody td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid rgba(0,86,179,0.1);
        }
        .table-modern tbody tr:hover {
            background: rgba(0,86,179,0.03);
        }
        .badge-modern {
            padding: 0.5rem 1rem;
            border-radius: 2rem;
            font-weight: 500;
            font-size: 0.8rem;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }
        .badge-presente {
            background: linear-gradient(135deg, #d1edff, #74b9ff);
            color: #0984e3;
            border: 1px solid #74b9ff;
        }
        .badge-ausente {
            background: linear-gradient(135deg, #ffe0e0, #ff7675);
            color: #d63031;
            border: 1px solid #ff7675;
        }
        .badge-tardanza {
            background: linear-gradient(135deg, #fff3cd, #ffeaa7);
            color: #856404;
            border: 1px solid #ffeaa7;
        }
        .badge-regular {
            background: linear-gradient(135deg, #e3f2fd, #90caf9);
            color: #1976d2;
            border: 1px solid #90caf9;
        }
        .badge-feriado {
            background: linear-gradient(135deg, #f3e5f5, #ce93d8);
            color: #7b1fa2;
            border: 1px solid #ce93d8;
        }
        .badge-extra {
            background: linear-gradient(135deg, #e8f5e8, #a5d6a7);
            color: #388e3c;
            border: 1px solid #a5d6a7;
        }
        .badge-regular {
            background: linear-gradient(135deg, #e3f2fd, #90caf9);
            color: #1976d2;
            border: 1px solid #90caf9;
        }
        .badge-feriado {
            background: linear-gradient(135deg, #f3e5f5, #ce93d8);
            color: #7b1fa2;
            border: 1px solid #ce93d8;
        }
        .badge-extra {
            background: linear-gradient(135deg, #e8f5e8, #a5d6a7);
            color: #388e3c;
            border: 1px solid #a5d6a7;
        }
        .hours-badge {
            background: linear-gradient(135deg, #fff3e0, #ffcc02);
            color: #ef6c00;
            border: 1px solid #ffcc02;
            font-weight: 600;
            padding: 0.4rem 0.8rem;
            border-radius: 1.5rem;
        }
        .badge-jornada-completa {
            background: linear-gradient(135deg, #e8f5e8, #a5d6a7);
            color: #2e7d32;
            border: 1px solid #a5d6a7;
        }
        .badge-jornada-manana {
            background: linear-gradient(135deg, #fff3e0, #ffb74d);
            color: #f57c00;
            border: 1px solid #ffb74d;
        }
        .badge-jornada-tarde {
            background: linear-gradient(135deg, #fce4ec, #f8bbd9);
            color: #c2185b;
            border: 1px solid #f8bbd9;
        }
        .badge-jornada-nocturno {
            background: linear-gradient(135deg, #e8eaf6, #9fa8da);
            color: #3f51b5;
            border: 1px solid #9fa8da;
        }
        .badge-jornada-personalizado {
            background: linear-gradient(135deg, #f3e5f5, #ce93d8);
            color: #7b1fa2;
            border: 1px solid #ce93d8;
        }
        .text-purple {
            color: #6f42c1 !important;
        }
        .btn-action {
            width: 35px;
            height: 35px;
            border-radius: 0.5rem;
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin: 0 0.2rem;
            transition: all 0.3s;
        }
        .btn-action:hover {
            transform: translateY(-2px);
        }
        .employee-info {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .employee-avatar {
            width: 32px;
            height: 32px;
            background: linear-gradient(135deg, #6f42c1, #6610f2);
            color: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 0.8rem;
        }
        .empty-state {
            text-align: center;
            padding: 3rem 2rem;
        }
        .empty-state-icon {
            font-size: 4rem;
            color: #adb5bd;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-heading text-center py-4">
                <div class="company-name">CARSIL</div>
                <div class="company-slogan">Equipos y Servicios SAC</div>
            </div>
            <div class="d-flex flex-column h-100 px-2 py-3">
                <a href="/menu/principal" class="menu-item">
                    <i class="bi bi-house"></i>
                    Inicio
                </a>
                <a href="/proformas" class="menu-item">
                    <i class="bi bi-file-earmark-text"></i>
                    Proformas
                </a>
                <a href="/facturas" class="menu-item">
                    <i class="bi bi-receipt"></i>
                    Facturas
                
                <a href="/clientes" class="menu-item">
                    <i class="bi bi-people"></i>
                    Clientes
                </a>
                <a href="/productos" class="menu-item">
                    <i class="bi bi-box"></i>
                    Productos
                </a>
                <a href="/empleados" class="menu-item">
                    <i class="bi bi-person-badge"></i>
                    Empleados
                </a>
                <a href="/pagos" class="menu-item">
                    <i class="bi bi-cash-coin"></i>
                    Pagos
                </a>
                <a href="/reportes" class="menu-item">
                    <i class="bi bi-bar-chart"></i>
                    Reportes
                </a>
                <a href="/usuarios" class="menu-item">
                    <i class="bi bi-person-circle"></i>
                    Usuarios
                </a>
                
                </a>
                <a href="/asistencia" class="menu-item">
                    <i class="bi bi-calendar-check"></i>
                    Asistencias
                </a>
                <a href="/empresa" class="menu-item">
                    <i class="bi bi-gear"></i>
                    Empresa
                </a>
                <div class="mt-auto">
                    <a href="/login" class="menu-item logout-item">
                        <i class="bi bi-box-arrow-right"></i>
                        Cerrar Sesión
                    </a>
                </div>
            </div>
        </nav>
        
        <!-- Botón para ocultar/mostrar barra -->
        <button class="toggle-sidebar-btn" id="toggleSidebarBtn" title="Ocultar/Mostrar menú">
            <i class="bi bi-chevron-left" id="toggleIcon"></i>
        </button>
        
        <!-- Main Content -->
        <div class="main-content" id="main-content">
            <nav class="navbar navbar-expand-lg navbar-top border-bottom">
                <div class="container-fluid">
                    <h5 class="page-title mb-0">
                        <i class="bi bi-calendar-check"></i>
                        Gestión de Asistencias
                    </h5>
                    <div class="user-profile ms-auto">
                        <span><%= user && user.Nombres ? user.Nombres : 'Administrador' %></span>
                        <div class="user-avatar"><%= user && user.Nombres ? user.Nombres.charAt(0) : 'A' %></div>
                    </div>
                </div>
            </nav>
            
            <div class="container-fluid py-4">
                <!-- Mensajes flash eliminados (success/error) según solicitud del usuario -->

                <!-- Debug section (temporary) -->
                <% if (asistencias.length > 0 && !asistencias[0].Nombres) { %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Advertencia:</strong> Los datos de empleados no se están cargando correctamente. 
                        Verificar que las tablas EMPLEADO y USUARIO tengan datos y estén relacionadas correctamente.
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Stats Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #6f42c1, #6610f2);">
                            <i class="bi bi-calendar-check text-white"></i>
                        </div>
                        <h6 class="text-muted">Total Registros</h6>
                        <h3 class="text-primary"><%= asistencias ? asistencias.length : 0 %></h3>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #28a745, #20c997);">
                            <i class="bi bi-check-circle text-white"></i>
                        </div>
                        <h6 class="text-muted">Presentes</h6>
                        <h3 class="text-success"><%= asistencias ? asistencias.filter(a => a.Estado === 'PRESENTE').length : 0 %></h3>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #ffc107, #fd7e14);">
                            <i class="bi bi-clock text-white"></i>
                        </div>
                        <h6 class="text-muted">Tardanzas</h6>
                        <h3 class="text-warning"><%= asistencias ? asistencias.filter(a => a.Estado === 'TARDANZA').length : 0 %></h3>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #dc3545, #c82333);">
                            <i class="bi bi-x-circle text-white"></i>
                        </div>
                        <h6 class="text-muted">Ausentes</h6>
                        <h3 class="text-danger"><%= asistencias ? asistencias.filter(a => a.Estado === 'AUSENTE').length : 0 %></h3>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #17a2b8, #138496);">
                            <i class="bi bi-stopwatch text-white"></i>
                        </div>
                        <h6 class="text-muted">Total Horas</h6>
                        <h3 class="text-info">
                            <%= asistencias ? 
                                asistencias.reduce((total, a) => total + (parseFloat(a.HorasTrabajadas) || 0), 0).toFixed(1) : 0 %>h
                        </h3>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #6f42c1, #6610f2);">
                            <i class="bi bi-calendar-plus text-white"></i>
                        </div>
                        <h6 class="text-muted">Días Extra</h6>
                        <h3 class="text-purple"><%= asistencias ? asistencias.filter(a => a.TipoAsistencia === 'EXTRA').length : 0 %></h3>
                    </div>
                </div>

                <% if (asistencias.length === 0) { %>
                    <!-- Estado vacío -->
                    <div class="card-modern">
                        <div class="empty-state">
                            <i class="bi bi-calendar-x empty-state-icon"></i>
                            <h5 class="mt-3">No hay registros de asistencia</h5>
                            <p class="text-muted">Comience registrando una nueva asistencia</p>
                            <a href="/asistencia/create" class="btn btn-primary-modern btn-modern">
                                <i class="bi bi-plus-circle"></i>
                                Registrar Asistencia
                            </a>
                        </div>
                    </div>
                <% } else { %>
                    <!-- Search and Actions -->
                    <div class="search-container">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="search-box flex-grow-1 me-3">
                                <div class="d-flex gap-2">
                                    <select class="form-select" id="campoFiltro" style="max-width: 180px;">
                                        <option value="0">Empleado</option>
                                        <option value="1">Fecha</option>
                                        <option value="2">Entrada</option>
                                        <option value="3">Salida</option>
                                        <option value="4">Horas</option>
                                        <option value="5">Estado</option>
                                        <option value="6">Tipo</option>
                                    </select>
                                    <input type="text" class="form-control" id="valorFiltro" placeholder="Buscar asistencias...">
                                </div>
                            </div>
                            <a href="/asistencia/create" class="btn btn-primary-modern btn-modern">
                                <i class="bi bi-plus-circle"></i>
                                Nueva Asistencia
                            </a>
                        </div>
                    </div>

                    <!-- Tabla de asistencias modernizada -->
                    <div class="card-modern">
                        <div class="table-responsive">
                            <table class="table table-modern mb-0">
                                <thead>
                                    <tr>
                                        <th><i class="bi bi-person me-1"></i>Empleado</th>
                                        <th><i class="bi bi-calendar-event me-1"></i>Fecha</th>
                                        <th><i class="bi bi-clock-fill me-1"></i>Jornada</th>
                                        <th><i class="bi bi-clock me-1"></i>Entrada</th>
                                        <th><i class="bi bi-clock-history me-1"></i>Salida</th>
                                        <th><i class="bi bi-stopwatch me-1"></i>Horas</th>
                                        <th><i class="bi bi-toggle-on me-1"></i>Estado</th>
                                        <th><i class="bi bi-tag me-1"></i>Tipo</th>
                                        <th class="text-center"><i class="bi bi-gear me-1"></i>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% asistencias.forEach(asistencia => { %>
                                        <tr>
                                            <td>
                                                <div class="employee-info">
                                                    <div class="employee-avatar">
                                                        <%= (asistencia.Nombres && asistencia.Apellidos) ? 
                                                            asistencia.Nombres.charAt(0) + asistencia.Apellidos.charAt(0) : 
                                                            'NN' %>
                                                    </div>
                                                    <div>
                                                        <strong>
                                                            <% if (asistencia.Nombres && asistencia.Apellidos) { %>
                                                                <%= asistencia.Apellidos %>, <%= asistencia.Nombres %>
                                                            <% } else if (asistencia.NombreCompleto) { %>
                                                                <%= asistencia.NombreCompleto %>
                                                            <% } else { %>
                                                                Empleado ID: <%= asistencia.IdEmpleado %>
                                                            <% } %>
                                                        </strong>
                                                        <div class="text-muted small">
                                                            <%= asistencia.Cargo || (asistencia.Area ? asistencia.Area : 'Sin cargo asignado') %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong><%= new Date(asistencia.Fecha).toLocaleDateString('es-PE', { weekday: 'short', day: '2-digit', month: 'short' }) %></strong>
                                                    <div class="text-muted small"><%= new Date(asistencia.Fecha).getFullYear() %></div>
                                                </div>
                                            </td>
                                            <td>
                                                <% if (asistencia.JornadaLaboral) { %>
                                                    <span class="badge-modern <%= 
                                                        asistencia.JornadaLaboral === 'COMPLETA' ? 'badge-jornada-completa' : 
                                                        asistencia.JornadaLaboral === 'MEDIO_MANANA' ? 'badge-jornada-manana' : 
                                                        asistencia.JornadaLaboral === 'MEDIO_TARDE' ? 'badge-jornada-tarde' : 
                                                        asistencia.JornadaLaboral === 'NOCTURNO' ? 'badge-jornada-nocturno' : 
                                                        'badge-jornada-personalizado'
                                                    %>">
                                                        <i class="bi <%= 
                                                            asistencia.JornadaLaboral === 'COMPLETA' ? 'bi-sun' : 
                                                            asistencia.JornadaLaboral === 'MEDIO_MANANA' ? 'bi-sunrise' : 
                                                            asistencia.JornadaLaboral === 'MEDIO_TARDE' ? 'bi-sunset' : 
                                                            asistencia.JornadaLaboral === 'NOCTURNO' ? 'bi-moon' : 
                                                            'bi-gear'
                                                        %>"></i>
                                                        <%= 
                                                            asistencia.JornadaLaboral === 'COMPLETA' ? 'Completa' : 
                                                            asistencia.JornadaLaboral === 'MEDIO_MANANA' ? 'Mañana' : 
                                                            asistencia.JornadaLaboral === 'MEDIO_TARDE' ? 'Tarde' : 
                                                            asistencia.JornadaLaboral === 'NOCTURNO' ? 'Nocturno' : 
                                                            'Personalizado'
                                                        %>
                                                    </span>
                                                <% } else { %>
                                                    <span class="text-muted small">Sin definir</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (asistencia.HoraEntrada) { %>
                                                    <span class="badge-modern badge-time">
                                                        <i class="bi bi-clock"></i>
                                                        <%= asistencia.HoraEntrada.slice(0,5) %>
                                                    </span>
                                                <% } else { %>
                                                    <span class="text-muted small">Sin registrar</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (asistencia.HoraSalida) { %>
                                                    <span class="badge-modern badge-time">
                                                        <i class="bi bi-clock-history"></i>
                                                        <%= asistencia.HoraSalida.slice(0,5) %>
                                                    </span>
                                                <% } else { %>
                                                    <span class="text-muted small">Sin registrar</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (asistencia.HorasTrabajadas && asistencia.HorasTrabajadas > 0) { %>
                                                    <span class="hours-badge">
                                                        <i class="bi bi-stopwatch"></i>
                                                        <%= parseFloat(asistencia.HorasTrabajadas).toFixed(2) %>h
                                                    </span>
                                                <% } else { %>
                                                    <span class="text-muted small">0.00h</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <span class="badge-modern <%= 
                                                    asistencia.Estado === 'PRESENTE' ? 'badge-presente' : 
                                                    asistencia.Estado === 'AUSENTE' ? 'badge-ausente' : 
                                                    'badge-tardanza'
                                                %>">
                                                    <i class="bi <%= 
                                                        asistencia.Estado === 'PRESENTE' ? 'bi-check-circle' : 
                                                        asistencia.Estado === 'AUSENTE' ? 'bi-x-circle' : 
                                                        'bi-clock'
                                                    %>"></i>
                                                    <%= asistencia.Estado %>
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge-modern <%= 
                                                    asistencia.TipoAsistencia === 'REGULAR' ? 'badge-regular' : 
                                                    asistencia.TipoAsistencia === 'FERIADO' ? 'badge-feriado' : 
                                                    'badge-extra'
                                                %>">
                                                    <i class="bi <%= 
                                                        asistencia.TipoAsistencia === 'REGULAR' ? 'bi-calendar-day' : 
                                                        asistencia.TipoAsistencia === 'FERIADO' ? 'bi-calendar-heart' : 
                                                        'bi-calendar-plus'
                                                    %>"></i>
                                                    <%= asistencia.TipoAsistencia || 'REGULAR' %>
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center gap-1">
                                                    <a href="/asistencia/<%= asistencia.IdAsistencia %>/edit" 
                                                       class="btn btn-outline-primary btn-action" 
                                                       title="Editar"
                                                       data-bs-toggle="tooltip">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <form action="/asistencia/<%= asistencia.IdAsistencia %>/delete" 
                                                          method="POST" 
                                                          class="d-inline"
                                                          onsubmit="return confirm('¿Está seguro de eliminar este registro?');">
                                                        <button type="submit" 
                                                                class="btn btn-outline-danger btn-action" 
                                                                title="Eliminar"
                                                                data-bs-toggle="tooltip">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                    <% if (asistencia.Observaciones) { %>
                                                        <button class="btn btn-outline-info btn-action" 
                                                                title="Ver observaciones"
                                                                data-bs-toggle="tooltip"
                                                                data-observaciones="<%= asistencia.Observaciones %>"
                                                                onclick="mostrarObservaciones(this)">
                                                            <i class="bi bi-chat-left-text"></i>
                                                        </button>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleBtn = document.getElementById('toggleSidebarBtn');
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('main-content');
            const toggleIcon = document.getElementById('toggleIcon');
            const menuItems = document.querySelectorAll('.menu-item');

            toggleBtn.addEventListener('click', function() {
                sidebar.classList.toggle('hide');
                mainContent.classList.toggle('full');
                if (sidebar.classList.contains('hide')) {
                    toggleIcon.classList.remove('bi-chevron-left');
                    toggleIcon.classList.add('bi-chevron-right');
                } else {
                    toggleIcon.classList.remove('bi-chevron-right');
                    toggleIcon.classList.add('bi-chevron-left');
                }
            });

            menuItems.forEach(item => {
                item.addEventListener('click', function() {
                    menuItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            // Inicializar tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        // Filtro único con combo box y campo de texto para asistencias
        const campoFiltro = document.getElementById('campoFiltro');
        const valorFiltro = document.getElementById('valorFiltro');
        if (campoFiltro && valorFiltro) {
            valorFiltro.addEventListener('input', filtrarTabla);
            campoFiltro.addEventListener('change', filtrarTabla);
            
            function filtrarTabla() {
                const col = parseInt(campoFiltro.value);
                const searchTerm = valorFiltro.value.toLowerCase();
                const rows = document.querySelectorAll('tbody tr');
                
                rows.forEach(row => {
                    const cell = row.querySelectorAll('td')[col];
                    if (cell) {
                        if (cell.textContent.toLowerCase().includes(searchTerm)) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    }
                });
            }
        }

        // Función para mostrar observaciones
        function mostrarObservaciones(button) {
            const observaciones = button.getAttribute('data-observaciones');
            alert('Observaciones:\n\n' + observaciones);
        }
    </script>
</body>
</html>

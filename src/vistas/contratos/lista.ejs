        .sidebar .logout-item {
            color: #ff6b6b;
        }
        
        .sidebar .logout-item:hover {
            background: rgba(255,107,107,0.1);
            color: #ff6b6b;
        }
        
        .main-content {
            margin-left: 270px;
            min-height: 100vh;
        }
        
        .user-profile {
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }
        
        .user-avatar {
            background: linear-gradient(135deg, #0056b3, #003366);
            color: #fff;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 1.2rem;
            box-shadow: 0 2px 8px rgba(0,86,179,0.3);

                <div class="page-header">
                    <div class="floating-shapes">
                        <i class="bi bi-file-earmark-check shape" style="font-size: 3rem;"></i>
                        <i class="bi bi-graph-up shape" style="font-size: 2.5rem;"></i>
                        <i class="bi bi-people shape" style="font-size: 2rem;"></i>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="page-title">
                                <i class="bi bi-file-earmark-check me-3 text-primary"></i>
                                Gesti√≥n de Contratos
                            </h1>
                            <p class="page-subtitle">Administre los contratos entre clientes y facturas</p>
                        </div>
                        <div>
                            <a href="/contratos/crear" class="btn btn-primary-modern btn-modern">
                                <i class="bi bi-plus-circle"></i>
                                Nuevo Contrato
                            </a>
                        </div>
                    </div>
                </div>

        <!-- Mensajes flash -->
        <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        <% if (success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

                <!-- Estad√≠sticas modernizadas -->
                <% if (estadisticas) { %>
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="card card-stats h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-file-earmark-check display-4 mb-3"></i>
                                <h3 class="mb-1"><%= estadisticas.TotalContratos || 0 %></h3>
                                <p class="mb-0">Total Contratos</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card card-stats h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-check-circle display-4 mb-3" style="color: #28a745;"></i>
                                <h3 class="mb-1"><%= estadisticas.ContratosActivos || 0 %></h3>
                                <p class="mb-0">Contratos Activos</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card card-stats h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-flag display-4 mb-3" style="color: #6f42c1;"></i>
                                <h3 class="mb-1"><%= estadisticas.ContratosFinalizados || 0 %></h3>
                                <p class="mb-0">Finalizados</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card card-stats h-100">
                            <div class="card-body text-center">
                                <i class="bi bi-currency-dollar display-4 mb-3" style="color: #ffc107;"></i>
                                <h3 class="mb-1">S/ <%= parseFloat(estadisticas.PromedioPageSemanal || 0).toFixed(2) %></h3>
                                <p class="mb-0">Promedio Semanal</p>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

        <div class="card shadow-sm">

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Empleados - CARSIL Equipos y Servicios SAC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { 
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #e9ecef 100%);
        }
        .toggle-sidebar-btn {
            position: absolute;
            top: 1.2rem;
            left: 290px;
            z-index: 1100;
            background: linear-gradient(135deg, #0056b3, #003366);
            color: #fff;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 12px rgba(0,86,179,0.3);
            cursor: pointer;
            transition: all 0.3s;
        }
        .toggle-sidebar-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0,86,179,0.4);
        }
        .sidebar.hide { transform: translateX(-100%); }
        .main-content.full { margin-left: 0 !important; }
        @media (max-width: 768px) {
            .toggle-sidebar-btn { left: 10px; top: 10px; }
        }
        .sidebar {
            width: 270px;
            min-height: 100vh;
            background: linear-gradient(180deg, #003366 0%, #001a33 100%);
            color: #fff;
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 1rem;
            z-index: 1000;
            box-shadow: 4px 0 20px rgba(0,0,0,0.1);
        }
        .sidebar .sidebar-heading {
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: 2px;
            color: #fff;
        }
        .sidebar .company-slogan {
            font-size: 0.9rem;
            color: #b0c4de;
            font-weight: 300;
        }
        .sidebar .menu-item {
            color: rgba(255,255,255,0.9);
            padding: 0.8rem 1.2rem;
            border-radius: 0.7rem;
            margin: 0.2rem 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.8rem;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s;
            position: relative;
        }
        .sidebar .menu-item:hover {
            background: rgba(0,86,179,0.3);
            color: #fff;
            transform: translateX(5px);
        }
        .sidebar .menu-item.active {
            background: linear-gradient(135deg, #0056b3, #0d6efd);
            color: #fff;
            box-shadow: 0 2px 8px rgba(0,86,179,0.3);
        }
        .sidebar .logout-item {
            color: #ff6b6b;
        }
        .sidebar .logout-item:hover {
            background: rgba(255,107,107,0.1);
            color: #ff6b6b;
        }
        .main-content {
            margin-left: 270px;
            min-height: 100vh;
            transition: margin 0.3s;
        }
        .user-profile {
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }
        .user-avatar {
            background: linear-gradient(135deg, #0056b3, #003366);
            color: #fff;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 1.2rem;
            box-shadow: 0 2px 8px rgba(0,86,179,0.3);
        }
        .navbar-top {
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0,0,0,0.08);
            border: none;
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        .stat-card {
            background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.06);
            border: 1px solid rgba(0,86,179,0.1);
            transition: all 0.3s;
        }
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0,0,0,0.12);
        }
        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }
        .card-modern {
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(0,86,179,0.1);
            border-radius: 1rem;
            box-shadow: 0 8px 32px rgba(0,0,0,0.06);
            transition: all 0.3s;
        }
        .card-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.12);
        }
        .btn-modern {
            border-radius: 0.7rem;
            padding: 0.6rem 1.5rem;
            font-weight: 600;
            border: none;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        .btn-primary-modern {
            background: linear-gradient(135deg, #0056b3, #0d6efd);
            color: #fff;
            box-shadow: 0 4px 12px rgba(0,86,179,0.3);
        }
        .btn-primary-modern:hover {
            background: linear-gradient(135deg, #003d82, #0b5ed7);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0,86,179,0.4);
            color: #fff;
        }
        .search-container {
            background: rgba(255,255,255,0.9);
            border-radius: 1rem;
            padding: 1rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.06);
            border: 1px solid rgba(0,86,179,0.1);
            margin-bottom: 2rem;
        }
        .search-box {
            position: relative;
        }
        .search-box .form-control, .search-box .form-select {
            border-radius: 0.7rem;
            border: 1px solid rgba(0,86,179,0.2);
            padding: 0.8rem 1rem;
            background: rgba(255,255,255,0.9);
            transition: all 0.3s;
        }
        .search-box .form-control:focus, .search-box .form-select:focus {
            border-color: #0056b3;
            box-shadow: 0 0 0 0.2rem rgba(0,86,179,0.15);
        }
        .table-modern {
            background: rgba(255,255,255,0.95);
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0,0,0,0.06);
        }
        .table-modern thead th {
            background: linear-gradient(135deg, #003366, #0056b3);
            color: #fff;
            font-weight: 600;
            border: none;
            padding: 1rem;
            font-size: 0.9rem;
        }
        .table-modern tbody td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid rgba(0,86,179,0.1);
        }
        .table-modern tbody tr:hover {
            background: rgba(0,86,179,0.03);
        }
        .badge-modern {
            padding: 0.5rem 1rem;
            border-radius: 2rem;
            font-weight: 500;
            font-size: 0.8rem;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }
        .badge-activo {
            background: linear-gradient(135deg, #d1edff, #74b9ff);
            color: #0984e3;
            border: 1px solid #74b9ff;
        }
        .badge-inactivo {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            color: #6c757d;
            border: 1px solid #dee2e6;
        }
        .btn-action {
            width: 35px;
            height: 35px;
            border-radius: 0.5rem;
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin: 0 0.2rem;
            transition: all 0.3s;
        }
        .btn-action:hover {
            transform: translateY(-2px);
        }
        .employee-info {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .employee-avatar {
            width: 32px;
            height: 32px;
            background: linear-gradient(135deg, #28a745, #20c997);
            color: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 0.8rem;
        }
        .salary-highlight {
            font-weight: 700;
            color: #28a745;
        }
        .contact-info {
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }
        .contact-info i {
            color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-heading text-center py-4">
                <div class="company-name">CARSIL</div>
                <div class="company-slogan">Equipos y Servicios SAC</div>
            </div>
            <div class="d-flex flex-column h-100 px-2 py-3">
                <a href="/menu/principal" class="menu-item">
                    <i class="bi bi-house"></i>
                    Inicio
                </a>
                <a href="/proformas" class="menu-item">
                    <i class="bi bi-file-earmark-text"></i>
                    Proformas
                </a>
                <a href="/facturas" class="menu-item">
                    <i class="bi bi-receipt"></i>
                    Facturas
                
                <a href="/clientes" class="menu-item">
                    <i class="bi bi-people"></i>
                    Clientes
                </a>
                <a href="/productos" class="menu-item">
                    <i class="bi bi-box"></i>
                    Productos
                </a>
                <a href="/empleados" class="menu-item">
                    <i class="bi bi-person-badge"></i>
                    Empleados
                </a>
                <a href="/pagos" class="menu-item">
                    <i class="bi bi-cash-coin"></i>
                    Pagos
                </a>
                <a href="/reportes" class="menu-item">
                    <i class="bi bi-bar-chart"></i>
                    Reportes
                </a>
                <a href="/usuarios" class="menu-item">
                    <i class="bi bi-person-circle"></i>
                    Usuarios
                </a>
                
                <a href="/asistencia" class="menu-item">
                    <i class="bi bi-calendar-check"></i>
                    Asistencias
                </a>
                <a href="/empresa" class="menu-item">
                    <i class="bi bi-gear"></i>
                    Empresa
                </a>
                <div class="mt-auto">
                    <a href="/login" class="menu-item logout-item">
                        <i class="bi bi-box-arrow-right"></i>
                        Cerrar Sesión
                    </a>
                </div>
            </div>
        </nav>
        
        <!-- Botón para ocultar/mostrar barra -->
        <button class="toggle-sidebar-btn" id="toggleSidebarBtn" title="Ocultar/Mostrar menú">
            <i class="bi bi-chevron-left" id="toggleIcon"></i>
        </button>
        
        <!-- Main Content -->
        <div class="main-content" id="main-content">
            <nav class="navbar navbar-expand-lg navbar-top border-bottom">
                <div class="container-fluid">
                    <h5 class="page-title mb-0">
                        <i class="bi bi-person-badge"></i>
                        Gestión de Empleados
                    </h5>
                    <div class="user-profile ms-auto">
                        <span><%= user && user.Nombres ? user.Nombres : 'Administrador' %></span>
                        <div class="user-avatar"><%= user && user.Nombres ? user.Nombres.charAt(0) : 'A' %></div>
                    </div>
                </div>
            </nav>
            
            <div class="container-fluid py-4">
                <!-- Mensajes flash eliminados según solicitud del usuario -->

                <!-- Stats Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #28a745, #20c997);">
                            <i class="bi bi-person-badge text-white"></i>
                        </div>
                        <h6 class="text-muted">Total Empleados</h6>
                        <h3 class="text-primary"><%= empleados ? empleados.length : 0 %></h3>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #74b9ff, #0984e3);">
                            <i class="bi bi-check-circle text-white"></i>
                        </div>
                        <h6 class="text-muted">Activos</h6>
                        <h3 class="text-success"><%= empleados ? empleados.filter(e => e.Estado === 'ACTIVO').length : 0 %></h3>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #6c757d, #495057);">
                            <i class="bi bi-pause-circle text-white"></i>
                        </div>
                        <h6 class="text-muted">Inactivos</h6>
                        <h3 class="text-muted"><%= empleados ? empleados.filter(e => e.Estado !== 'ACTIVO').length : 0 %></h3>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #6f42c1, #6610f2);">
                            <i class="bi bi-currency-dollar text-white"></i>
                        </div>
                        <h6 class="text-muted">Nómina Total</h6>
                        <h3 class="text-info">S/ <%= empleados ? empleados.reduce((sum, e) => sum + parseFloat(e.SueldoBase || 0), 0).toFixed(2) : '0.00' %></h3>
                    </div>
                </div>

                <!-- Search and Actions -->
                <div class="search-container">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="search-box flex-grow-1 me-3">
                            <div class="d-flex gap-2">
                                <select class="form-select" id="campoFiltroEmpleado" style="max-width: 180px;">
                                    <option value="0">Empleado</option>
                                    <option value="1">Contacto</option>
                                    <option value="2">Cargo</option>
                                    <option value="3">Área</option>
                                    <option value="4">Contratación</option>
                                    <option value="5">Sueldo</option>
                                    <option value="6">Banco</option>
                                    <option value="7">Estado</option>
                                </select>
                                <input type="text" class="form-control" id="valorFiltroEmpleado" placeholder="Buscar empleados...">
                            </div>
                        </div>
                        <a href="/empleados/create" class="btn btn-primary-modern btn-modern">
                            <i class="bi bi-plus-circle"></i>
                            Nuevo Empleado
                        </a>
                    </div>
                </div>

                <!-- Tabla de empleados modernizada -->
                <div class="card-modern">
                    <div class="table-responsive">
                        <table class="table table-modern mb-0">
                            <thead>
                                <tr>
                                    <th><i class="bi bi-person me-1"></i>Empleado</th>
                                    <th><i class="bi bi-telephone me-1"></i>Contacto</th>
                                    <th><i class="bi bi-briefcase me-1"></i>Cargo</th>
                                    <th><i class="bi bi-building me-1"></i>Área</th>
                                    <th><i class="bi bi-calendar-event me-1"></i>Contratación</th>
                                    <th><i class="bi bi-currency-dollar me-1"></i>Sueldo</th>
                                    <th><i class="bi bi-bank me-1"></i>Datos Bancarios</th>
                                    <th><i class="bi bi-toggle-on me-1"></i>Estado</th>
                                    <th class="text-center"><i class="bi bi-gear me-1"></i>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (empleados && empleados.length > 0) { %>
                                    <% empleados.forEach(e => { %>
                                        <tr>
                                            <td>
                                                <div class="employee-info">
                                                    <div class="employee-avatar">
                                                        <%= e.Nombres ? e.Nombres.charAt(0).toUpperCase() : 'E' %>
                                                    </div>
                                                    <div>
                                                        <strong><%= e.Apellidos %>, <%= e.Nombres %></strong>
                                                        <div class="text-muted small">ID: <%= e.IdEmpleado %></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <% if (e.Correo) { %>
                                                        <div class="contact-info">
                                                            <i class="bi bi-envelope"></i>
                                                            <span><%= e.Correo %></span>
                                                        </div>
                                                    <% } %>
                                                    <% if (e.Telefono) { %>
                                                        <div class="contact-info">
                                                            <i class="bi bi-telephone"></i>
                                                            <span><%= e.Telefono %></span>
                                                        </div>
                                                    <% } %>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-dark">
                                                    <i class="bi bi-briefcase me-1"></i>
                                                    <%= e.Cargo %>
                                                </span>
                                            </td>
                                            <td>
                                                <i class="bi bi-building text-muted me-1"></i>
                                                <%= e.Area || 'Sin área' %>
                                            </td>
                                            <td>
                                                <div>
                                                    <i class="bi bi-calendar-check text-muted me-1"></i>
                                                    <%= e.FechaContratacion ? new Date(e.FechaContratacion).toLocaleDateString('es-PE', { day: '2-digit', month: 'short', year: 'numeric' }) : 'N/A' %>
                                                </div>
                                                <small class="text-muted"><%= e.TipoContrato || 'Sin especificar' %></small>
                                            </td>
                                            <td>
                                                <strong class="salary-highlight">
                                                    S/ <%= Number(e.SueldoBase || 0).toFixed(2) %>
                                                </strong>
                                            </td>
                                            <td>
                                                <div>
                                                    <% if (e.Banco) { %>
                                                        <div class="contact-info">
                                                            <i class="bi bi-bank"></i>
                                                            <span><%= e.Banco %></span>
                                                        </div>
                                                    <% } %>
                                                    <% if (e.NumeroCuenta) { %>
                                                        <small class="text-muted"><%= e.NumeroCuenta %></small>
                                                    <% } %>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge-modern <%= e.Estado === 'ACTIVO' ? 'badge-activo' : 'badge-inactivo' %>">
                                                    <i class="bi <%= e.Estado === 'ACTIVO' ? 'bi-check-circle' : 'bi-pause-circle' %>"></i>
                                                    <%= e.Estado %>
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center gap-1">
                                                    <a href="/empleados/<%= e.IdEmpleado %>/edit" 
                                                       class="btn btn-outline-primary btn-action" 
                                                       title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <form action="/empleados/<%= e.IdEmpleado %>/delete" 
                                                          method="POST" 
                                                          class="d-inline"
                                                          onsubmit="return confirm('¿Está seguro de eliminar este empleado?');">
                                                        <button type="submit" 
                                                                class="btn btn-outline-danger btn-action" 
                                                                title="Eliminar">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="9" class="text-center py-5">
                                            <i class="bi bi-person-badge text-muted" style="font-size: 3rem;"></i>
                                            <p class="text-muted mt-2">No hay empleados registrados.</p>
                                            <a href="/empleados/create" class="btn btn-primary-modern btn-modern">
                                                <i class="bi bi-plus-circle"></i>
                                                Crear primer empleado
                                            </a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleBtn = document.getElementById('toggleSidebarBtn');
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('main-content');
            const toggleIcon = document.getElementById('toggleIcon');
            const menuItems = document.querySelectorAll('.menu-item');

            toggleBtn.addEventListener('click', function() {
                sidebar.classList.toggle('hide');
                mainContent.classList.toggle('full');
                if (sidebar.classList.contains('hide')) {
                    toggleIcon.classList.remove('bi-chevron-left');
                    toggleIcon.classList.add('bi-chevron-right');
                } else {
                    toggleIcon.classList.remove('bi-chevron-right');
                    toggleIcon.classList.add('bi-chevron-left');
                }
            });

            menuItems.forEach(item => {
                item.addEventListener('click', function() {
                    menuItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                });
            });
        });

        // Filtro único con combo box y campo de texto para empleados
        const campoFiltroEmpleado = document.getElementById('campoFiltroEmpleado');
        const valorFiltroEmpleado = document.getElementById('valorFiltroEmpleado');
        if (campoFiltroEmpleado && valorFiltroEmpleado) {
            valorFiltroEmpleado.addEventListener('input', filtrarTablaEmpleados);
            campoFiltroEmpleado.addEventListener('change', filtrarTablaEmpleados);
        }

        function filtrarTablaEmpleados() {
            const col = parseInt(campoFiltroEmpleado.value);
            const searchTerm = valorFiltroEmpleado.value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');
            
            rows.forEach(row => {
                if (row.querySelectorAll('td').length < 9) return;
                
                let cellText = '';
                const cells = row.querySelectorAll('td');
                
                // Ajustar según la columna seleccionada
                switch(col) {
                    case 0: // Empleado
                        cellText = cells[0].textContent.toLowerCase();
                        break;
                    case 1: // Contacto
                        cellText = cells[1].textContent.toLowerCase();
                        break;
                    case 2: // Cargo
                        cellText = cells[2].textContent.toLowerCase();
                        break;
                    case 3: // Área
                        cellText = cells[3].textContent.toLowerCase();
                        break;
                    case 4: // Contratación
                        cellText = cells[4].textContent.toLowerCase();
                        break;
                    case 5: // Sueldo
                        cellText = cells[5].textContent.toLowerCase();
                        break;
                    case 6: // Banco
                        cellText = cells[6].textContent.toLowerCase();
                        break;
                    case 7: // Estado
                        cellText = cells[7].textContent.toLowerCase();
                        break;
                }
                
                if (cellText.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }
    </script>
</body>
</html>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Configurar Empresa - CARSIL Equipos y Servicios SAC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { 
            font-family: 'Montserrat', sans-serif; 
            background: linear-gradient(135deg, #f8fafc 0%, #e9ecef 100%);
        }
        .sidebar, .main-content { transition: all 0.3s; }
        .toggle-sidebar-btn {
            position: absolute;
            top: 1.2rem;
            left: 290px;
            z-index: 1100;
            background: linear-gradient(135deg, #0056b3, #003366);
            color: #fff;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 12px rgba(0,86,179,0.3);
            cursor: pointer;
            transition: all 0.3s;
        }
        .toggle-sidebar-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0,86,179,0.4);
        }
        .sidebar.hide { transform: translateX(-100%); }
        .main-content.full { margin-left: 0 !important; }
        @media (max-width: 768px) {
            .toggle-sidebar-btn { left: 10px; top: 10px; }
        }
        .sidebar {
            width: 270px;
            min-height: 100vh;
            background: linear-gradient(180deg, #003366 0%, #001a33 100%);
            color: #fff;
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 1rem;
            z-index: 1000;
            box-shadow: 4px 0 20px rgba(0,0,0,0.1);
        }
        .sidebar .sidebar-heading {
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: 2px;
            color: #fff;
        }
        .sidebar .company-slogan {
            font-size: 0.9rem;
            color: #b0c4de;
            font-weight: 300;
        }
        .sidebar .menu-item {
            color: rgba(255,255,255,0.9);
            padding: 0.8rem 1.2rem;
            border-radius: 0.7rem;
            margin: 0.2rem 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.8rem;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s;
            position: relative;
        }
        .sidebar .menu-item:hover {
            background: rgba(0,86,179,0.3);
            color: #fff;
            transform: translateX(5px);
        }
        .sidebar .menu-item.active {
            background: linear-gradient(135deg, #0056b3, #0d6efd);
            color: #fff;
            box-shadow: 0 2px 8px rgba(0,86,179,0.3);
        }
        .sidebar .logout-item {
            color: #ff6b6b;
        }
        .sidebar .logout-item:hover {
            background: rgba(255,107,107,0.1);
            color: #ff6b6b;
        }
        .main-content {
            margin-left: 270px;
            min-height: 100vh;
            transition: margin 0.3s;
        }
        .user-profile {
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }
        .user-avatar {
            background: linear-gradient(135deg, #0056b3, #003366);
            color: #fff;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 1.2rem;
            box-shadow: 0 2px 8px rgba(0,86,179,0.3);
        }
        .config-card {
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(0,86,179,0.1);
            border-radius: 1.5rem;
            box-shadow: 0 8px 32px rgba(0,0,0,0.08);
            overflow: hidden;
            transition: all 0.3s;
            max-width: 1000px;
            margin: 0 auto;
        }
        .config-header {
            background: linear-gradient(135deg, #003366 0%, #0056b3 50%, #0d6efd 100%);
            color: #fff;
            padding: 2.5rem 2rem 2rem 2rem;
            position: relative;
            overflow: hidden;
        }
        .config-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.3;
        }
        .company-logo-section {
            display: flex;
            align-items: center;
            gap: 2rem;
            position: relative;
            z-index: 1;
        }
        .company-logo-placeholder {
            width: 80px;
            height: 80px;
            background: rgba(255,255,255,0.2);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255,255,255,0.3);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: #fff;
            box-shadow: 0 8px 32px rgba(0,0,0,0.2);
        }
        .company-details h3 {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 4px rgba(0,0,0,0.2);
        }
        .company-details .ruc-badge {
            background: rgba(255,255,255,0.2);
            backdrop-filter: blur(10px);
            padding: 0.4rem 0.8rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 0.9rem;
            display: inline-block;
        }
        .form-container {
            padding: 2.5rem;
        }
        .form-section {
            background: linear-gradient(135deg, #f8fafc 0%, #fff 100%);
            border-radius: 1rem;
            padding: 2rem;
            margin-bottom: 2rem;
            border: 1px solid rgba(0,86,179,0.1);
            transition: all 0.3s;
        }
        .form-section:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }
        .section-title {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            font-size: 1.2rem;
            font-weight: 600;
            color: #003366;
            margin-bottom: 1.5rem;
            padding-bottom: 0.8rem;
            border-bottom: 2px solid rgba(0,86,179,0.1);
        }
        .section-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #0056b3, #0d6efd);
            color: #fff;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
        }
        .form-label {
            font-weight: 600;
            color: #003366;
            margin-bottom: 0.5rem;
        }
        .input-group-text {
            background: linear-gradient(135deg, #e3e8f0, #f1f5f9);
            color: #0056b3;
            border: 1px solid rgba(0,86,179,0.2);
            font-size: 1rem;
        }
        .form-control, .form-select {
            border: 1px solid rgba(0,86,179,0.2);
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            transition: all 0.3s;
            font-size: 0.95rem;
        }
        .form-control:focus, .form-select:focus {
            border-color: #0056b3;
            box-shadow: 0 0 0 0.2rem rgba(0,86,179,0.15);
        }
        .input-group .form-control {
            border-left: none;
        }
        .input-group .form-control:focus {
            border-left: none;
        }
        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            padding-top: 1rem;
            border-top: 2px solid rgba(0,86,179,0.1);
            margin-top: 1rem;
        }
        .btn-config {
            padding: 0.8rem 2rem;
            font-weight: 600;
            border-radius: 0.8rem;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.8rem;
            text-decoration: none;
            border: none;
            font-size: 1rem;
        }
        .btn-config:hover {
            transform: translateY(-2px);
        }
        .btn-primary-config {
            background: linear-gradient(135deg, #0056b3, #0d6efd);
            color: #fff;
            box-shadow: 0 4px 15px rgba(0,86,179,0.3);
        }
        .btn-primary-config:hover {
            background: linear-gradient(135deg, #003d82, #0b5ed7);
            box-shadow: 0 6px 20px rgba(0,86,179,0.4);
            color: #fff;
        }
        .btn-secondary-config {
            background: rgba(108,117,125,0.1);
            color: #6c757d;
            border: 2px solid rgba(108,117,125,0.2);
        }
        .btn-secondary-config:hover {
            background: #6c757d;
            color: #fff;
            border-color: #6c757d;
        }
        .required-field::after {
            content: " *";
            color: #dc3545;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-heading text-center py-4">
                <div class="company-name">CARSIL</div>
                <div class="company-slogan">Equipos y Servicios SAC</div>
            </div>
            <div class="d-flex flex-column h-100 px-2 py-3">
                <a href="/menu/principal" class="menu-item">
                    <i class="bi bi-house"></i>
                    Inicio
                </a>
                <a href="/proformas" class="menu-item">
                    <i class="bi bi-file-earmark-text"></i>
                    Proformas
                </a>
                <a href="/facturas" class="menu-item">
                    <i class="bi bi-receipt"></i>
                    Facturas
                
                <a href="/clientes" class="menu-item">
                    <i class="bi bi-people"></i>
                    Clientes
                </a>
                <a href="/productos" class="menu-item">
                    <i class="bi bi-box"></i>
                    Productos
                </a>
                <a href="/empleados" class="menu-item">
                    <i class="bi bi-person-badge"></i>
                    Empleados
                </a>
                <a href="/pagos" class="menu-item">
                    <i class="bi bi-cash-coin"></i>
                    Pagos
                </a>
                <a href="/reportes" class="menu-item">
                    <i class="bi bi-bar-chart"></i>
                    Reportes
                </a>
                <a href="/usuarios" class="menu-item">
                    <i class="bi bi-person-circle"></i>
                    Usuarios
                </a>
                
                <a href="/asistencia" class="menu-item">
                    <i class="bi bi-calendar-check"></i>
                    Asistencias
                </a>
                <a href="/empresa" class="menu-item">
                    <i class="bi bi-gear"></i>
                    Empresa
                </a>
                <div class="mt-auto">
                    <a href="/login" class="menu-item logout-item">
                        <i class="bi bi-box-arrow-right"></i>
                        Cerrar Sesión
                    </a>
                </div>
            </div>
        </nav>
        <!-- Botón para ocultar/mostrar barra -->
        <button class="toggle-sidebar-btn" id="toggleSidebarBtn" title="Ocultar/Mostrar menú">
            <i class="bi bi-chevron-left" id="toggleIcon"></i>
        </button>
        <!-- Main Content -->
        <div class="main-content" id="main-content">
                <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <h5 class="page-title mb-0">
                        <i class="bi bi-gear"></i>
                        Configuración de Empresa
                    </h5>
                    <div class="user-profile ms-auto">
                        <span><%= user && user.Nombres ? user.Nombres : 'Administrador' %></span>
                        <div class="user-avatar"><%= user && user.Nombres ? user.Nombres.charAt(0) : 'A' %></div>
                    </div>
                </div>
            </nav>
            <div class="container-fluid py-4">
                <div class="config-card">
                    <!-- Header de la empresa -->
                    <div class="config-header">
                        <div class="company-logo-section">
                            <div class="company-logo-placeholder">
                                <% if (empresa.Logo) { %>
                                    <img src="/empresa/logo/<%= empresa.IdEmpresa %>" alt="Logo" class="img-fluid" style="max-width: 100px; max-height: 100px; object-fit: contain; border-radius: 14px;">
                                <% } else { %>
                                    <i class="bi bi-building"></i>
                                <% } %>
                            </div>
                            <div class="company-details">
                                <h3><%= empresa.Nombre || 'Configurando Empresa' %></h3>
                                <div class="ruc-badge">
                                    <i class="bi bi-credit-card-2-front me-2"></i>
                                    RUC: <%= empresa.RUC || 'No configurado' %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Formulario de configuración -->
                    <div class="form-container">
                        <form action="/empresa/editar/<%= empresa.IdEmpresa %>" method="POST" enctype="multipart/form-data">
                            
                            <!-- Información Básica -->
                            <div class="form-section">
                                <div class="section-title">
                                    <div class="section-icon">
                                        <i class="bi bi-info-circle"></i>
                                    </div>
                                    Información Básica
                                </div>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="Nombre" class="form-label required-field">Razón Social</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-building"></i></span>
                                            <input type="text" class="form-control" id="Nombre" name="Nombre" 
                                                   value="<%= empresa.Nombre || '' %>" required 
                                                   placeholder="Ej: CARSIL Equipos y Servicios SAC">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="RUC" class="form-label required-field">RUC</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-credit-card-2-front"></i></span>
                                            <input type="text" class="form-control" id="RUC" name="RUC" 
                                                   value="<%= empresa.RUC || '' %>" required maxlength="11"
                                                   placeholder="Ej: 20123456789">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <label for="Direccion" class="form-label required-field">Dirección</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                            <input type="text" class="form-control" id="Direccion" name="Direccion" 
                                                   value="<%= empresa.Direccion || '' %>" required
                                                   placeholder="Ej: Av. Principal 123, Lima">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="Estado" class="form-label">Estado</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-toggle-on"></i></span>
                                            <select class="form-select" id="Estado" name="Estado">
                                                <option value="1" <%= empresa.Estado == 1 ? 'selected' : '' %>>Activo</option>
                                                <option value="0" <%= empresa.Estado == 0 ? 'selected' : '' %>>Inactivo</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="Logo" class="form-label">Logo de la Empresa</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-image"></i></span>
                                            <input type="file" class="form-control" id="Logo" name="Logo" accept="image/*">
                                        </div>
                                        <small class="text-muted">Formatos soportados: JPG, PNG, GIF. Tamaño máximo: 2MB</small>
                                    </div>
                                </div>
                            </div>

                            <!-- Información de Contacto -->
                            <div class="form-section">
                                <div class="section-title">
                                    <div class="section-icon">
                                        <i class="bi bi-telephone"></i>
                                    </div>
                                    Información de Contacto
                                </div>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="Telefono" class="form-label">Teléfono</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                            <input type="text" class="form-control" id="Telefono" name="Telefono" 
                                                   value="<%= empresa.Telefono || '' %>" maxlength="20"
                                                   placeholder="Ej: 012345678">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="Celular" class="form-label">Celular</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-phone"></i></span>
                                            <input type="text" class="form-control" id="Celular" name="Celular" 
                                                   value="<%= empresa.Celular || '' %>" maxlength="20"
                                                   placeholder="Ej: 987654321">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <label for="Email" class="form-label">Email</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                            <input type="email" class="form-control" id="Email" name="Email" 
                                                   value="<%= empresa.Email || '' %>" maxlength="100"
                                                   placeholder="Ej: contacto@carsil.com">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Información Bancaria -->
                            <div class="form-section">
                                <div class="section-title">
                                    <div class="section-icon">
                                        <i class="bi bi-bank"></i>
                                    </div>
                                    Información Bancaria
                                </div>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="CuentaBancaria" class="form-label">Cuenta Bancaria</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-credit-card"></i></span>
                                            <input type="text" class="form-control" id="CuentaBancaria" name="CuentaBancaria" 
                                                   value="<%= empresa.CuentaBancaria || '' %>" maxlength="100"
                                                   placeholder="Ej: 1234567890123456">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="NombreCuentaBancaria" class="form-label">Nombre de la Cuenta</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-bank2"></i></span>
                                            <input type="text" class="form-control" id="NombreCuentaBancaria" name="NombreCuentaBancaria" 
                                                   value="<%= empresa.NombreCuentaBancaria || '' %>" maxlength="100"
                                                   placeholder="Ej: CARSIL SAC">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Texto de Presentación -->
                            <div class="form-section">
                                <div class="section-title">
                                    <div class="section-icon">
                                        <i class="bi bi-chat-quote"></i>
                                    </div>
                                    Texto de Presentación
                                </div>
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label for="TextoPresentacion" class="form-label">Mensaje en Proformas</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-quote"></i></span>
                                            <textarea class="form-control" id="TextoPresentacion" name="TextoPresentacion" 
                                                      rows="3" maxlength="500"
                                                      placeholder="En atención a vuestra solicitud, tenemos el agrado de cotizarles lo siguiente:"><%= empresa.TextoPresentacion || 'En atención a vuestra solicitud, tenemos el agrado de cotizarles lo siguiente:' %></textarea>
                                        </div>
                                        <small class="text-muted">Este texto aparecerá en las proformas y cotizaciones (máximo 500 caracteres)</small>
                                    </div>
                                </div>
                            </div>

                            <!-- Botones de acción -->
                            <div class="action-buttons">
                                <a href="/empresa" class="btn-config btn-secondary-config">
                                    <i class="bi bi-x-circle"></i>
                                    Cancelar
                                </a>
                                <button type="submit" class="btn-config btn-primary-config">
                                    <i class="bi bi-save"></i>
                                    Guardar Configuración
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggleBtn = document.getElementById('toggleSidebarBtn');
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('main-content');
        const toggleIcon = document.getElementById('toggleIcon');
        const menuItems = document.querySelectorAll('.menu-item');
        const userAvatar = document.querySelector('.user-avatar');
        const userName = 'Administrador';
        if(userAvatar) userAvatar.textContent = userName.charAt(0);

        if(toggleBtn) toggleBtn.addEventListener('click', function() {
            sidebar.classList.toggle('hide');
            mainContent.classList.toggle('full');
            if (sidebar.classList.contains('hide')) {
                toggleIcon.classList.remove('bi-chevron-left');
                toggleIcon.classList.add('bi-chevron-right');
            } else {
                toggleIcon.classList.remove('bi-chevron-right');
                toggleIcon.classList.add('bi-chevron-left');
            }
        });
        menuItems.forEach(item => {
            item.addEventListener('click', function() {
                menuItems.forEach(i => i.classList.remove('active'));
                this.classList.add('active');
            });
        });
    });
    </script>
</body>
</html>

<body>
    <div class="action-buttons">
        <button onclick="generatePDF()" class="btn-action btn-print">
            <i class="bi bi-file-earmark-pdf"></i> Descargar PDF
        </button>
        <a href="/facturas" class="btn-action btn-close">
            <i class="bi bi-x-circle"></i> Cancelar
        </a>
    </div>

    <div class="document-container">
        <div class="header-container">
            <div class="logo-empresa">
                <img src="/img/Carsil.png" alt="Logo CARSIL" onerror="this.style.display='none'">
            </div>
            
            <div class="documento-info">
                <div class="tipo">FACTURA ELECTRÓNICA</div>
                <div>
                    <span class="numero">N° <%= factura.Codigo %></span>
                    <span class="estado estado-<%= factura.Estado ? factura.Estado.toLowerCase() : 'pendiente' %>">
                        <%= factura.Estado || 'PENDIENTE' %>
                    </span>
                </div>
                <div>Fecha: <%= factura.FechaEmision ? factura.FechaEmision.toISOString ? factura.FechaEmision.toISOString().split('T')[0] : factura.FechaEmision : new Date().toISOString().split('T')[0] %></div>
                <% if (factura.FechaVencimiento) { %>
                    <div>Vencimiento: <%= factura.FechaVencimiento.toISOString ? factura.FechaVencimiento.toISOString().split('T')[0] : factura.FechaVencimiento %></div>
                <% } %>
            </div>
        </div>

        <div class="cliente-info">
            <h3>DATOS DEL CLIENTE</h3>
            <table>
                <tr>
                    <td class="label">Razón Social:</td>
                    <td><%= cliente.RazonSocial || 'Cliente no encontrado' %></td>
                </tr>
                <tr>
                    <td class="label">RUC/DNI:</td>
                    <td><%= cliente.Documento || '-' %></td>
                </tr>
                <tr>
                    <td class="label">Dirección:</td>
                    <td><%= cliente.Direccion || '-' %></td>
                </tr>
                <tr>
                    <td class="label">Contacto:</td>
                    <td><%= cliente.Contacto || '-' %></td>
                </tr>
                <tr>
                    <td class="label">Email:</td>
                    <td><%= cliente.Email || '-' %></td>
                </tr>
                <% if (factura.IdProforma) { %>
                <tr>
                    <td class="label">Referencia:</td>
                    <td>Generada desde proforma aprobada</td>
                </tr>
                <% } %>
            </table>
        </div>

        <table class="productos">
            <thead>
                <tr>
                    <th class="item">#</th>
                    <th class="cant">CANT</th>
                    <th class="unid">UNID</th>
                    <th class="desc">DESCRIPCIÓN</th>
                    <th class="vvu">P. UNIT.</th>
                    <th class="vtotal">TOTAL</th>
                </tr>
            </thead>
            <tbody>
                <% if (productos && productos.length > 0) { %>
                    <% productos.forEach(function(item, index) { %>
                        <tr>
                            <td class="item"><%= index + 1 %></td>
                            <td class="cant"><%= item.Cantidad || 1 %></td>
                            <td class="unid"><%= item.UnidadMedida || item.Unidad || 'UND' %></td>
                            <td class="desc">
                                <strong><%= item.ProductoNombre || item.Nombre || 'Producto no encontrado' %></strong>
                                <% if (item.ProductoDescripcion && item.ProductoDescripcion.trim() !== '') { %>
                                    <br><small><%= item.ProductoDescripcion %></small>
                                <% } %>
                                <% if (item.Descripcion && item.Descripcion.trim() !== '' && (!item.ProductoDescripcion || item.ProductoDescripcion.trim() === '')) { %>
                                    <br><small><%= item.Descripcion %></small>
                                <% } %>
                            </td>
                            <td class="vvu"><%= !isNaN(parseFloat(item.PrecioUnitario)) ? parseFloat(item.PrecioUnitario).toFixed(2) : '0.00' %></td>
                            <td class="vtotal"><%= !isNaN(parseFloat(item.Total)) ? parseFloat(item.Total).toFixed(2) : '0.00' %></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="6" style="text-align: center; padding: 20px;">
                            No hay productos registrados en esta factura.<br>
                            <% if (factura.IdProforma) { %>
                                <small>Esta factura fue generada desde una proforma pero no se encontraron productos asociados.</small>
                            <% } %>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <table class="totales">
            <tr>
                <td class="label">SUB TOTAL</td>
                <td class="valor"><%= !isNaN(parseFloat(factura.SubTotal)) ? parseFloat(factura.SubTotal).toFixed(2) : '0.00' %></td>
            </tr>
            <tr>
                <td class="label">IGV (18%)</td>
                <td class="valor"><%= !isNaN(parseFloat(factura.TotalIGV)) ? parseFloat(factura.TotalIGV).toFixed(2) : '0.00' %></td>
            </tr>
            <tr>
                <td class="label">TOTAL S/</td>
                <td class="valor"><%= !isNaN(parseFloat(factura.Total)) ? parseFloat(factura.Total).toFixed(2) : '0.00' %></td>
            </tr>
        </table>

        <div class="condiciones">
            <h3>CONDICIONES DE PAGO</h3>
            <p><strong>Forma de pago:</strong> <%= factura.FormaPago || 'Según acuerdo comercial' %></p>
            <p><strong>Estado:</strong> 
                <span class="estado estado-<%= factura.Estado ? factura.Estado.toLowerCase() : 'pendiente' %>">
                    <%= factura.Estado || 'PENDIENTE' %>
                </span>
            </p>
            <% if (factura.FechaVencimiento) { %>
            <p><strong>Vencimiento:</strong> <%= factura.FechaVencimiento.toISOString ? factura.FechaVencimiento.toISOString().split('T')[0] : factura.FechaVencimiento %></p>
            <% } %>
            <p><strong>Cuenta bancaria:</strong>
                <% if (empresa && empresa.CuentaBancaria) { %>
                    <%= empresa.NombreCuentaBancaria || 'CARSIL EQUIPOS Y SERVICIOS S.A.C.' %> - N° <%= empresa.CuentaBancaria %>
                <% } else { %>
                    Solicitar datos de cuenta
                <% } %>
            </p>
        </div>

        <% if (factura.Observaciones && factura.Observaciones.trim() !== '') { %>
        <div class="condiciones" style="margin-top: 15px;">
            <h3>OBSERVACIONES</h3>
            <p><%= factura.Observaciones %></p>
        </div>
        <% } %>

        <div class="firma">
            <p>Atentamente,</p>
            <p class="nombre">
                <% if (usuario && usuario.Nombres) { %>
                    <%= usuario.Nombres %> <%= usuario.Apellidos || '' %>
                <% } else { %>
                    REPRESENTANTE DE VENTAS
                <% } %>
            </p>
            <p class="empresa">CARSIL EQUIPOS Y SERVICIOS S.A.C.</p>
        </div>

        <div class="nota">
            <p>Documento con validez legal y tributaria</p>
        </div>

        <div class="qr-container">
            <div class="qr-info">
                <h4>Representación impresa de la Factura Electrónica</h4>
                <p><strong>RUC:</strong> 20606030451</p>
                <p><strong>FACTURA ELECTRÓNICA:</strong> <%= factura.Codigo %></p>
                <p><strong>Fecha de emisión:</strong> <%= factura.FechaEmision ? factura.FechaEmision.toISOString ? factura.FechaEmision.toISOString().split('T')[0] : factura.FechaEmision : new Date().toISOString().split('T')[0] %></p>
                <p><strong>Monto total:</strong> S/ <%= !isNaN(parseFloat(factura.Total)) ? parseFloat(factura.Total).toFixed(2) : '0.00' %></p>
                <p>Consulte el documento en: <strong>www.sunat.gob.pe</strong></p>
            </div>
            <div class="qr-code">
                <!-- QR Code generado dinámicamente - En este ejemplo usamos un servicio externo -->
                <img src="https://api.qrserver.com/v1/create-qr-code/?size=90x90&data=20606030451|01|<%= factura.Codigo %>|<%= factura.FechaEmision ? factura.FechaEmision.toISOString ? factura.FechaEmision.toISOString().split('T')[0] : factura.FechaEmision : new Date().toISOString().split('T')[0] %>|<%= !isNaN(parseFloat(factura.Total)) ? parseFloat(factura.Total).toFixed(2) : '0.00' %>" 
                     alt="Código QR" 
                     style="width: 90px; height: 90px;">
            </div>
        </div>
    </div>

    <script>
        // Función para generar PDF mejorada
        async function generatePDF() {
            // Verificar si las librerías están disponibles
            if (typeof window.html2canvas === 'undefined') {
                alert('Error: html2canvas no está disponible. Usando impresión simple...');
                window.print();
                return;
            }
            
            if (typeof window.jspdf === 'undefined') {
                alert('Error: jsPDF no está disponible. Usando impresión simple...');
                window.print();
                return;
            }

            const { jsPDF } = window.jspdf;
            
            // Mostrar mensaje de carga
            const buttons = document.querySelector('.action-buttons');
            const originalHTML = buttons.innerHTML;
            buttons.innerHTML = '<div style="padding: 12px 20px; background: #ffc107; color: #000; border-radius: 8px; font-weight: 600;">Generando PDF...</div>';
            
            try {
                const element = document.querySelector('.document-container');
                
                // Configuración mejorada para html2canvas
                const canvas = await html2canvas(element, {
                    scale: 1.5,
                    useCORS: true,
                    allowTaint: false,
                    backgroundColor: '#ffffff',
                    logging: false,
                    width: element.offsetWidth,
                    height: element.offsetHeight,
                    windowWidth: element.offsetWidth,
                    windowHeight: element.offsetHeight,
                    removeContainer: false,
                    async: true,
                    foreignObjectRendering: false
                });
                
                const imgData = canvas.toDataURL('image/png', 0.95);
                
                // Crear PDF con mejor configuración
                const pdf = new jsPDF({
                    orientation: 'portrait',
                    unit: 'mm',
                    format: 'a4',
                    compress: true
                });
                
                const pdfWidth = pdf.internal.pageSize.getWidth();
                const pdfHeight = pdf.internal.pageSize.getHeight();
                const imgWidth = canvas.width;
                const imgHeight = canvas.height;
                
                // Definir márgenes en mm para una hoja A4
                const marginTop = 10;
                const marginLeft = 22; // Ajustado para mejor visualización
                const marginRight = 15;
                
                // Área útil del PDF (descontando márgenes)
                const usableWidth = pdfWidth - marginLeft - marginRight;
                
                // Convertir dimensiones de píxeles a mm (1 píxel = 0.264583 mm)
                const imgWidthMM = imgWidth * 0.264583;
                const imgHeightMM = imgHeight * 0.264583;
                
                // Calcular escala para ajustar al ancho útil
                const scale = usableWidth / imgWidthMM;
                
                // Dimensiones finales de la imagen en el PDF
                const finalWidth = imgWidthMM * scale;
                const finalHeight = imgHeightMM * scale;
                
                // Posicionar desde arriba (como documento normal)
                const imgX = marginLeft;
                const imgY = marginTop;
                
                // Si el contenido es muy alto, podría necesitar múltiples páginas
                if (finalHeight > (pdfHeight - marginTop - 10)) {
                    // Ajustar para que quepa en una página
                    const pageScale = (pdfHeight - marginTop - 10) / imgHeightMM;
                    const pageWidth = imgWidthMM * pageScale;
                    const pageHeight = imgHeightMM * pageScale;
                    
                    // Centrar horizontalmente si es necesario
                    const finalX = marginLeft + (usableWidth - pageWidth) / 2;
                    
                    pdf.addImage(imgData, 'PNG', finalX, imgY, pageWidth, pageHeight, '', 'FAST');
                } else {
                    // Centrar horizontalmente
                    const finalX = marginLeft + (usableWidth - finalWidth) / 2;
                    pdf.addImage(imgData, 'PNG', finalX, imgY, finalWidth, finalHeight, '', 'FAST');
                }
                
                // Obtener datos de la factura para el nombre del archivo
                const facturaData = window.facturaInfo || {
                    codigo: 'SIN_CODIGO',
                    estado: 'PENDIENTE'
                };
                const fecha = new Date().toLocaleDateString('es-ES').replace(/\//g, '-');
                const fileName = `Factura_${facturaData.codigo}_${fecha}.pdf`;
                
                // Guardar el PDF
                pdf.save(fileName);
                
                // Mostrar mensaje de éxito
                buttons.innerHTML = '<div style="padding: 12px 20px; background: #28a745; color: white; border-radius: 8px; font-weight: 600;">¡PDF generado exitosamente!</div>';
                setTimeout(() => {
                    buttons.innerHTML = originalHTML;
                }, 2000);
                
            } catch (error) {
                console.error('Error detallado generando PDF:', error);
                
                // Restaurar botones
                buttons.innerHTML = originalHTML;
                
                // Mostrar error más específico
                let errorMsg = 'Error al generar el PDF: ';
                if (error.message.includes('canvas')) {
                    errorMsg += 'Problema al capturar la imagen del documento.';
                } else if (error.message.includes('CORS')) {
                    errorMsg += 'Problema de permisos con las imágenes.';
                } else if (error.message.includes('addImage')) {
                    errorMsg += 'Error al crear el PDF.';
                } else {
                    errorMsg += error.message || 'Error desconocido.';
                }
                
                errorMsg += '\n\n¿Deseas usar la impresión simple en su lugar?';
                
                if (confirm(errorMsg)) {
                    window.print();
                }
            }
        }

        // Verificación de datos en consola (solo para desarrollo)
        console.log('Datos básicos disponibles:');
        console.log('Código factura:', '<%= factura.Codigo || "No disponible" %>');
        console.log('Estado factura:', '<%= factura.Estado || "No disponible" %>');
        console.log('Total factura:', '<%= factura.Total || "0.00" %>');
        
        // Variables globales seguras para usar en las funciones
        window.facturaInfo = {
            codigo: '<%= factura.Codigo || "SIN_CODIGO" %>',
            estado: '<%= factura.Estado || "PENDIENTE" %>',
            total: '<%= factura.Total || "0.00" %>'
        };
    </script>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Proformas - CARSIL Equipos y Servicios SAC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { 
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #e9ecef 100%);
        }
        .toggle-sidebar-btn {
            position: absolute;
            top: 1.2rem;
            left: 290px;
            z-index: 1100;
            background: linear-gradient(135deg, #0056b3, #003366);
            color: #fff;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 12px rgba(0,86,179,0.3);
            cursor: pointer;
            transition: all 0.3s;
        }
        .toggle-sidebar-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0,86,179,0.4);
        }
        .sidebar.hide { transform: translateX(-100%); }
        .main-content.full { margin-left: 0 !important; }
        @media (max-width: 768px) {
            .toggle-sidebar-btn { left: 10px; top: 10px; }
        }
        .sidebar {
            width: 270px;
            min-height: 100vh;
            background: linear-gradient(180deg, #003366 0%, #001a33 100%);
            color: #fff;
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 1rem;
            z-index: 1000;
            box-shadow: 4px 0 20px rgba(0,0,0,0.1);
        }
        .sidebar .sidebar-heading {
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: 2px;
            color: #fff;
        }
        .sidebar .company-slogan {
            font-size: 0.9rem;
            color: #b0c4de;
            font-weight: 300;
        }
        .sidebar .menu-item {
            color: rgba(255,255,255,0.9);
            padding: 0.8rem 1.2rem;
            border-radius: 0.7rem;
            margin: 0.2rem 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.8rem;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s;
            position: relative;
        }
        .sidebar .menu-item:hover {
            background: rgba(0,86,179,0.3);
            color: #fff;
            transform: translateX(5px);
        }
        .sidebar .menu-item.active {
            background: linear-gradient(135deg, #0056b3, #0d6efd);
            color: #fff;
            box-shadow: 0 2px 8px rgba(0,86,179,0.3);
        }
        .sidebar .logout-item {
            color: #ff6b6b;
        }
        .sidebar .logout-item:hover {
            background: rgba(255,107,107,0.1);
            color: #ff6b6b;
        }
        .main-content {
            margin-left: 270px;
            min-height: 100vh;
            transition: margin 0.3s;
        }
        .user-profile {
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }
        .user-avatar {
            background: linear-gradient(135deg, #0056b3, #003366);
            color: #fff;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 1.2rem;
            box-shadow: 0 2px 8px rgba(0,86,179,0.3);
        }
        .navbar-top {
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0,0,0,0.08);
            border: none;
        }
        .page-header {
            background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
            padding: 2rem;
            margin-bottom: 2rem;
            border-radius: 1rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            border: 1px solid rgba(0,86,179,0.1);
        }
        .page-title {
            color: #003366;
            font-weight: 700;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        .stat-card {
            background: linear-gradient(135deg, #fff 0%, #f8fafc 100%);
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.06);
            border: 1px solid rgba(0,86,179,0.1);
            transition: all 0.3s;
        }
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0,0,0,0.12);
        }
        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }
        .card-modern {
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(0,86,179,0.1);
            border-radius: 1rem;
            box-shadow: 0 8px 32px rgba(0,0,0,0.06);
            transition: all 0.3s;
        }
        .card-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.12);
        }
        .btn-modern {
            border-radius: 0.7rem;
            padding: 0.6rem 1.5rem;
            font-weight: 600;
            border: none;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        .btn-primary-modern {
            background: linear-gradient(135deg, #0056b3, #0d6efd);
            color: #fff;
            box-shadow: 0 4px 12px rgba(0,86,179,0.3);
        }
        .btn-primary-modern:hover {
            background: linear-gradient(135deg, #003d82, #0b5ed7);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0,86,179,0.4);
            color: #fff;
        }
        .search-container {
            background: rgba(255,255,255,0.9);
            border-radius: 1rem;
            padding: 1rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.06);
            border: 1px solid rgba(0,86,179,0.1);
            margin-bottom: 2rem;
        }
        .search-box {
            position: relative;
        }
        .search-box .form-control {
            border-radius: 0.7rem;
            border: 1px solid rgba(0,86,179,0.2);
            padding: 0.8rem 1rem 0.8rem 3rem;
            background: rgba(255,255,255,0.9);
            transition: all 0.3s;
        }
        .search-box .form-control:focus {
            border-color: #0056b3;
            box-shadow: 0 0 0 0.2rem rgba(0,86,179,0.15);
        }
        .search-box .search-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #0056b3;
            font-size: 1.1rem;
        }
        .table-modern {
            background: rgba(255,255,255,0.95);
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0,0,0,0.06);
        }
        .table-modern thead th {
            background: linear-gradient(135deg, #003366, #0056b3);
            color: #fff;
            font-weight: 600;
            border: none;
            padding: 1rem;
            font-size: 0.9rem;
        }
        .table-modern tbody td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid rgba(0,86,179,0.1);
        }
        .table-modern tbody tr:hover {
            background: rgba(0,86,179,0.03);
        }
        .badge-modern {
            padding: 0.5rem 1rem;
            border-radius: 2rem;
            font-weight: 500;
            font-size: 0.8rem;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }
        .badge-pendiente {
            background: linear-gradient(135deg, #fff3cd, #ffeaa7);
            color: #856404;
            border: 1px solid #ffeaa7;
        }
        .badge-aprobado {
            background: linear-gradient(135deg, #d1edff, #74b9ff);
            color: #0984e3;
            border: 1px solid #74b9ff;
        }
        .badge-rechazado {
            background: linear-gradient(135deg, #ffe0e0, #ff7675);
            color: #d63031;
            border: 1px solid #ff7675;
        }
        .btn-action {
            width: 35px;
            height: 35px;
            border-radius: 0.5rem;
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin: 0 0.2rem;
            transition: all 0.3s;
        }
        .btn-action:hover {
            transform: translateY(-2px);
        }
        .modal-modern .modal-content {
            border-radius: 1rem;
            border: none;
            box-shadow: 0 20px 60px rgba(0,0,0,0.2);
        }
        .modal-modern .modal-header {
            background: linear-gradient(135deg, #003366, #0056b3);
            color: #fff;
            border-radius: 1rem 1rem 0 0;
            border: none;
        }
        .amount-highlight {
            font-weight: 700;
            color: #0056b3;
        }
        .client-avatar {
            width: 32px;
            height: 32px;
            background: linear-gradient(135deg, #74b9ff, #0984e3);
            color: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 0.8rem;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
       <nav class="sidebar" id="sidebar">
            <div class="sidebar-heading text-center py-4">
                <div class="company-name">CARSIL</div>
                <div class="company-slogan">Equipos y Servicios SAC</div>
            </div>
            <div class="d-flex flex-column h-100 px-2 py-3">
                <a href="/menu/principal" class="menu-item">
                    <i class="bi bi-house"></i>
                    Inicio
                </a>
                <a href="/proformas" class="menu-item">
                    <i class="bi bi-file-earmark-text"></i>
                    Proformas
                </a>
                <a href="/facturas" class="menu-item">
                    <i class="bi bi-receipt"></i>
                    Facturas
                
                <a href="/clientes" class="menu-item">
                    <i class="bi bi-people"></i>
                    Clientes
                </a>
                <a href="/productos" class="menu-item">
                    <i class="bi bi-box"></i>
                    Productos
                </a>
                <a href="/empleados" class="menu-item">
                    <i class="bi bi-person-badge"></i>
                    Empleados
                </a>
                <a href="/pagos" class="menu-item">
                    <i class="bi bi-cash-coin"></i>
                    Pagos
                </a>
                <a href="/reportes" class="menu-item">
                    <i class="bi bi-bar-chart"></i>
                    Reportes
                </a>
                <a href="/usuarios" class="menu-item">
                    <i class="bi bi-person-circle"></i>
                    Usuarios
                </a>
               
                <a href="/asistencia" class="menu-item">
                    <i class="bi bi-calendar-check"></i>
                    Asistencias
                </a>
                <a href="/empresa" class="menu-item">
                    <i class="bi bi-gear"></i>
                    Empresa
                </a>
                <div class="mt-auto">
                    <a href="/login" class="menu-item logout-item">
                        <i class="bi bi-box-arrow-right"></i>
                        Cerrar Sesión
                    </a>
                </div>
            </div>
        </nav>
        
        <!-- Botón para ocultar/mostrar barra -->
        <button class="toggle-sidebar-btn" id="toggleSidebarBtn" title="Ocultar/Mostrar menú">
            <i class="bi bi-chevron-left" id="toggleIcon"></i>
        </button>
        
        <!-- Main Content -->
        <div class="main-content" id="main-content">
            <nav class="navbar navbar-expand-lg navbar-top border-bottom">
                <div class="container-fluid">
                    <h5 class="page-title mb-0">
                        <i class="bi bi-file-earmark-text"></i>
                        Gestión de Proformas
                    </h5>
                    <div class="user-profile ms-auto">
                        <span><%= user && user.Nombres ? user.Nombres : 'Usuario' %></span>
                        <div class="user-avatar"><%= user && user.Nombres ? user.Nombres.charAt(0) : 'U' %></div>
                    </div>
                </div>
            </nav>
            
            <div class="container-fluid py-4">
                <!-- Mensajes flash -->
                <% if (messages && messages.success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i><%= messages.success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <% if (messages && messages.error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i><%= messages.error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Debug section (temporary) -->
                <% if (proformas && proformas.length > 0 && (!proformas[0].ClienteNombre || !proformas[0].UsuarioNombre)) { %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Advertencia:</strong> Los datos de clientes o usuarios no se están cargando correctamente. 
                        Verificar que las tablas CLIENTE, USUARIO y EMPRESA tengan datos y estén relacionadas correctamente con las proformas.
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Stats Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #74b9ff, #0984e3);">
                            <i class="bi bi-file-earmark-text text-white"></i>
                        </div>
                        <h6 class="text-muted">Total Proformas</h6>
                        <h3 class="text-primary"><%= proformas ? proformas.length : 0 %></h3>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #ffeaa7, #fdcb6e);">
                            <i class="bi bi-clock text-warning"></i>
                        </div>
                        <h6 class="text-muted">Pendientes</h6>
                        <h3 class="text-warning"><%= proformas ? proformas.filter(p => p.Estado === 'PENDIENTE').length : 0 %></h3>
                    </div>
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #55efc4, #00b894);">
                            <i class="bi bi-check-circle text-success"></i>
                        </div>
                        <h6 class="text-muted">Aprobadas</h6>
                        <h3 class="text-success"><%= proformas ? proformas.filter(p => p.Estado === 'APROBADA').length : 0 %></h3>
                    </div>
                </div>

                <!-- Search and Actions -->
                <div class="search-container">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="search-box flex-grow-1 me-3">
                            <i class="bi bi-search search-icon"></i>
                            <div class="d-flex gap-2">
                                <select class="form-select" id="campoFiltro" style="max-width: 180px;">
                                    <option value="0">Código</option>
                                    <option value="1">Cliente</option>
                                    <option value="2">Usuario</option>
                                    <option value="3">Fecha</option>
                                    <option value="8">Estado</option>
                                    <option value="7">Total</option>
                                </select>
                                <input type="text" class="form-control" id="valorFiltro" placeholder="Buscar proformas...">
                            </div>
                        </div>
                        <a href="/proformas/nueva" class="btn btn-primary-modern btn-modern">
                            <i class="bi bi-plus-circle"></i>
                            Nueva Proforma
                        </a>
                    </div>
                </div>

                <!-- Tabla de proformas modernizada -->
                <div class="card-modern">
                    <div class="table-responsive">
                        <table class="table table-modern mb-0">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Cliente</th>
                                    <th>Usuario</th>
                                    <th>Empresa</th>
                                    <th>Fecha</th>
                                    <th>Validez</th>
                                    <th>SubTotal</th>
                                    <th>IGV</th>
                                    <th>Total</th>
                                    <th>Estado</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% if (proformas && proformas.length > 0) { %>
                                <% proformas.forEach(function(proforma) { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-file-earmark-text text-primary me-2"></i>
                                                <strong><%= proforma.Codigo %></strong>
                                            </div>
                                        </td>                        <td>
                            <div class="d-flex align-items-center">
                                <div class="client-avatar me-2">
                                    <%= (proforma.ClienteNombre && proforma.ClienteNombre.length > 0 && !proforma.ClienteNombre.includes('Cliente no encontrado')) ? 
                                        proforma.ClienteNombre.charAt(0).toUpperCase() : 'C' %>
                                </div>
                                <div>
                                    <% if (proforma.ClienteNombre && proforma.ClienteNombre.trim() !== '' && !proforma.ClienteNombre.includes('Cliente no encontrado')) { %>
                                        <div class="fw-bold"><%= proforma.ClienteNombre %></div>
                                        <% if (proforma.ClienteDocumento && proforma.ClienteDocumento.trim() !== '') { %>
                                            <small class="text-muted">RUC: <%= proforma.ClienteDocumento %></small>
                                        <% } %>
                                    <% } else { %>
                                        <span class="text-warning">Cliente ID: <%= proforma.IdCliente %></span>
                                    <% } %>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="client-avatar me-2" style="background: linear-gradient(135deg, #ffeaa7, #fdcb6e);">
                                    <%= (proforma.UsuarioNombre && proforma.UsuarioNombre.length > 0 && !proforma.UsuarioNombre.includes('Usuario no encontrado')) ? 
                                        proforma.UsuarioNombre.charAt(0).toUpperCase() : 'U' %>
                                </div>
                                <div>
                                    <% if (proforma.UsuarioNombre && proforma.UsuarioNombre.trim() !== '' && !proforma.UsuarioNombre.includes('Usuario no encontrado')) { %>
                                        <div class="fw-bold"><%= proforma.UsuarioNombre %></div>
                                        <small class="text-muted">Responsable</small>
                                    <% } else { %>
                                        <span class="text-warning">Usuario ID: <%= proforma.IdUsuario %></span>
                                    <% } %>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="client-avatar me-2" style="background: linear-gradient(135deg, #d63384, #e83e8c);">
                                    <%= (proforma.EmpresaNombre && proforma.EmpresaNombre.length > 0 && !proforma.EmpresaNombre.includes('Empresa no encontrada')) ? 
                                        proforma.EmpresaNombre.charAt(0).toUpperCase() : 'E' %>
                                </div>
                                <div>
                                    <% if (proforma.EmpresaNombre && proforma.EmpresaNombre.trim() !== '' && !proforma.EmpresaNombre.includes('Empresa no encontrada')) { %>
                                        <div class="fw-bold"><%= proforma.EmpresaNombre %></div>
                                        <% if (proforma.EmpresaRUC && proforma.EmpresaRUC.trim() !== '') { %>
                                            <small class="text-muted">RUC: <%= proforma.EmpresaRUC %></small>
                                        <% } %>
                                    <% } else { %>
                                        <span class="text-warning">Empresa ID: <%= proforma.IdEmpresa %></span>
                                    <% } %>
                                </div>
                            </div>
                        </td>
                                        <td>
                                            <i class="bi bi-calendar3 text-muted me-1"></i>
                                            <%= proforma.FechaEmision ? proforma.FechaEmision.toISOString ? proforma.FechaEmision.toISOString().split('T')[0] : proforma.FechaEmision : '' %>
                                        </td>
                                        <td>
                                            <span class="badge bg-light text-dark">
                                                <i class="bi bi-clock me-1"></i>
                                                <%= proforma.ValidezOferta %> días
                                            </span>
                                        </td>
                                        <td class="amount-highlight">S/ <%= !isNaN(parseFloat(proforma.SubTotal)) ? parseFloat(proforma.SubTotal).toFixed(2) : '0.00' %></td>
                                        <td class="amount-highlight">S/ <%= !isNaN(parseFloat(proforma.TotalIGV)) ? parseFloat(proforma.TotalIGV).toFixed(2) : '0.00' %></td>
                                        <td>
                                            <strong class="amount-highlight" style="font-size: 1.1rem;">
                                                S/ <%= !isNaN(parseFloat(proforma.Total)) ? parseFloat(proforma.Total).toFixed(2) : '0.00' %>
                                            </strong>
                                        </td>
                                        <td>
                                            <% let estado = proforma.EstadoVisual || proforma.Estado; %>
                                            <span class="badge-modern
                                                <%= estado === 'PENDIENTE' ? 'badge-pendiente'
                                                    : estado === 'APROBADA' ? 'badge-aprobado'
                                                    : estado === 'FACTURADA' ? 'badge-aprobado'
                                                    : estado === 'VENCIDA' ? 'badge-rechazado'
                                                    : 'badge-rechazado' %>">
                                                <i class="bi
                                                    <%= estado === 'PENDIENTE' ? 'bi-clock'
                                                        : estado === 'APROBADA' ? 'bi-check-circle'
                                                        : estado === 'FACTURADA' ? 'bi-receipt'
                                                        : estado === 'VENCIDA' ? 'bi-x-circle'
                                                        : 'bi-x-circle' %>"></i>
                                                <%= estado %>
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="d-flex justify-content-center gap-1 flex-wrap">
                                                <a href="/proformas/<%= proforma.IdProforma %>/editar" 
                                                   class="btn btn-outline-primary btn-action" 
                                                   title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a href="/proformas/<%= proforma.IdProforma %>/detalle" 
                                                   class="btn btn-outline-info btn-action" 
                                                   target="_blank"
                                                   title="Ver detalle en nueva pestaña">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                
                                                
                                                
                                                
                                                
                                                <form action="/proformas/<%= proforma.IdProforma %>/eliminar" 
                                                      method="POST" 
                                                      class="d-inline" 
                                                      onsubmit="return confirm('¿Seguro de eliminar esta proforma?');">
                                                    <button type="submit" 
                                                            class="btn btn-outline-danger btn-action" 
                                                            title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="11" class="text-center py-5">
                                        <i class="bi bi-file-earmark-text text-muted" style="font-size: 3rem;"></i>
                                        <p class="text-muted mt-2">No hay proformas registradas.</p>
                                        <a href="/proformas/nueva" class="btn btn-primary-modern btn-modern">
                                            <i class="bi bi-plus-circle"></i>
                                            Crear primera proforma
                                        </a>
                                    </td>
                                </tr>
                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleBtn = document.getElementById('toggleSidebarBtn');
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('main-content');
            const toggleIcon = document.getElementById('toggleIcon');
            
            // Toggle sidebar
            toggleBtn.addEventListener('click', function() {
                sidebar.classList.toggle('hide');
                mainContent.classList.toggle('full');
                if (sidebar.classList.contains('hide')) {
                    toggleIcon.classList.remove('bi-chevron-left');
                    toggleIcon.classList.add('bi-chevron-right');
                } else {
                    toggleIcon.classList.remove('bi-chevron-right');
                    toggleIcon.classList.add('bi-chevron-left');
                }
            });
            
            // Filtro de tabla
            const campoFiltro = document.getElementById('campoFiltro');
            const valorFiltro = document.getElementById('valorFiltro');
            if (campoFiltro && valorFiltro) {
                valorFiltro.addEventListener('input', filtrarTabla);
                campoFiltro.addEventListener('change', filtrarTabla);
            }
            
            function filtrarTabla() {
                const col = parseInt(campoFiltro.value);
                const searchTerm = valorFiltro.value.toLowerCase();
                const rows = document.querySelectorAll('tbody tr');
                
                rows.forEach(row => {
                    // Skip si es la fila de "no hay proformas"
                    if (row.querySelectorAll('td').length < 10) return;
                    
                    const cell = row.querySelectorAll('td')[col];
                    let cellText = cell.textContent.toLowerCase();
                    
                    // Para campos de moneda (SubTotal, IGV, Total)
                    if (col === 5 || col === 6 || col === 7) {
                        cellText = cellText.replace('s/', '').trim();
                    }
                    
                    if (cell && cellText.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            }
        });

        // Función para aprobar proforma
        function aprobarProforma(idProforma) {
            if (confirm('¿Está seguro de que desea APROBAR esta proforma? Una vez aprobada podrá generar factura.')) {
                fetch(`/proformas/${idProforma}/aprobar`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ estado: 'APROBADA' })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Proforma aprobada exitosamente');
                        location.reload();
                    } else {
                        alert('Error al aprobar proforma: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al aprobar proforma');
                });
            }
        }

        // Función para generar factura desde proforma
        function generarFactura(idProforma) {
            if (confirm('¿Desea generar una factura basada en esta proforma aprobada?')) {
                // Mostrar indicador de carga
                const btn = event.target.closest('button');
                const originalContent = btn.innerHTML;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status"></span>';
                btn.disabled = true;

                fetch(`/facturas/desde-proforma/${idProforma}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Factura generada exitosamente');
                        // Redirigir a la factura creada
                        window.open(`/facturas/${data.idFactura}`, '_blank');
                        location.reload();
                    } else {
                        alert('Error al generar factura: ' + data.message);
                        btn.innerHTML = originalContent;
                        btn.disabled = false;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al generar factura');
                    btn.innerHTML = originalContent;
                    btn.disabled = false;
                });
            }
        }
    </script>
</body>
</html>
